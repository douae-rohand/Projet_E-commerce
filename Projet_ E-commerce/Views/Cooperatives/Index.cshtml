@model Projet__E_commerce.Models.DashboardStats
@{
    ViewData["Title"] = "Nos Coopératives";
}

<div class="cooperatives-page overflow-hidden">
    <!-- Hero Section -->
    <section class="relative mt-4 py-5 md-py-28 overflow-hidden" style="background: linear-gradient(135deg, rgba(253, 226, 210, 0.5) 0%, rgba(255, 255, 255, 1) 50%, rgba(163, 198, 211, 0.4) 100%);">
        <div class="container position-relative z-1 text-center py-5">
            <div class="max-w-3xl mx-auto">
                <div class="mb-4 animate-fade-in-up">
                    <span class="px-3 py-1 bg-light border border-light-subtle text-primary small rounded-pill fw-medium d-inline-flex align-items-center gap-2" style="background-color: rgba(230, 235, 245, 0.8) !important; color: #4A6FB5 !important; border-color: rgba(180, 190, 210, 0.3) !important;">
                        <i class="bi bi-leaf"></i>
                        Commerce Équitable & Solidaire
                    </span>
                </div>
                <h1 class="display-3 font-display fw-bold mb-4 animate-fade-in-up stagger-1">
                    Nos Coopératives
                    <span class="text-majorelle d-block mt-2">Partenaires</span>
                </h1>
                <p class="lead text-muted max-w-2xl mx-auto mb-0 animate-fade-in-up stagger-2" style="font-size: 1.2rem; opacity: 0.8;">
                    Rencontrez les artisans et producteurs qui perpétuent les traditions marocaines. 
                    Chaque achat soutient directement leurs communautés.
                </p>
            </div>
        </div>
    </section>

    <section class="py-5 bg-white border-y border-light position-relative z-10">
        <div class="container">
            <div class="row g-4 text-center">
                <div class="col-6 col-md-3">
                    <div class="stat-badge bg-ciel-30 text-majorelle mx-auto mb-3">
                        <i class="bi bi-people h4 mb-0"></i>
                    </div>
                    <div class="h2 font-display fw-bold mb-1">@(Model?.TotalCooperatives ?? 0)+</div>
                    <div class="small text-muted text-uppercase tracking-wider">Coopératives</div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="stat-badge bg-ciel-30 text-majorelle mx-auto mb-3">
                        <i class="bi bi-heart h4 mb-0"></i>
                    </div>
                    <div class="h2 font-display fw-bold mb-1">@(Model?.TotalProducts ?? 0)+</div>
                    <div class="small text-muted text-uppercase tracking-wider">Artisans</div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="stat-badge bg-ciel-30 text-majorelle mx-auto mb-3">
                        <i class="bi bi-shield-check h4 mb-0"></i>
                    </div>
                    <div class="h2 font-display fw-bold mb-1">100%</div>
                    <div class="small text-muted text-uppercase tracking-wider">Équitable</div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="stat-badge bg-ciel-30 text-majorelle mx-auto mb-3">
                        <i class="bi bi-geo-alt h4 mb-0"></i>
                    </div>
                    <div class="h2 font-display fw-bold mb-1">@(Model?.TotalOrders ?? 0)+</div>
                    <div class="small text-muted text-uppercase tracking-wider">Régions</div>
                </div>
            </div>
        </div>
    </section>

    <!-- Cooperatives Grid -->
    <section class="py-5 bg-light-soft">
        <div class="container">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-4 mb-5 pb-4 border-bottom border-light-subtle">
                <div>
                    <h2 class="display-6 font-display fw-bold mb-2">Découvrez nos partenaires</h2>
                    <p class="text-muted mb-0">Des coopératives certifiées et engagées pour un commerce équitable</p>
                </div>
                <div class="dropdown">
                    <button class="btn btn-outline-dark rounded-pill px-4 py-2 dropdown-toggle fw-bold d-flex align-items-center gap-2 transition-all shadow-sm" type="button" id="categoryFilter" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-filter-left fs-5"></i>
                        <span>Par catégorie</span>
                    </button>
                    <ul class="dropdown-menu shadow-elevated border-0 rounded-4 mt-2 p-2 animate-fade-in" aria-labelledby="categoryFilter">
                        <li><a class="dropdown-item filter-btn active rounded-3 mb-1 py-2" href="#" data-category="all">Toutes les catégories</a></li>
                        @if (Model?.Categories != null)
                        {
                            foreach (var cat in Model.Categories)
                            {
                                <li><a class="dropdown-item filter-btn rounded-3 mb-1 py-2" href="#" data-category="@cat.nom.ToLower()">@cat.nom</a></li>
                            }
                        }
                    </ul>
                </div>
            </div>
            
            <div class="row g-4" id="coopsGrid">
                @if (Model?.Cooperatives != null && Model.Cooperatives.Any())
                {
                    foreach (var coop in Model.Cooperatives)
                    {
                        var allReviews = coop.Produits.SelectMany(p => p.Avis).Where(a => a.note.HasValue).ToList();
                        double avgRating = allReviews.Any() ? Math.Round(allReviews.Average(a => a.note!.Value), 1) : 4.8;
                        var mainCategory = coop.Produits.FirstOrDefault()?.Categorie?.nom ?? "Artisanat";
                        
                        <div class="col-md-6 col-lg-4 animate-fade-in-up coop-item" data-category="@mainCategory.ToLower()">
                            <div class="coop-card group h-100 bg-white rounded-5 overflow-hidden shadow-soft border border-light-subtle transition-all hover-lift">
                                <div class="coop-img-wrapper position-relative" style="height: 180px;">
                                    <img src="@(string.IsNullOrEmpty(coop.logo) ? "https://images.unsplash.com/photo-1596040033229-a9821ebd058d?w=600&h=400&fit=crop" : coop.logo)" 
                                         class="w-100 h-100 object-fit-cover transition-transform" alt="@coop.nom_cooperative">
                                    <div class="coop-overlay position-absolute inset-0"></div>
                                </div>
                                
                                <div class="p-3">
                                    <div class="d-flex align-items-center gap-2 mb-3">
                                        <span class="badge bg-terracotta-10 text-terracotta rounded-pill px-3 py-1 fw-bold">
                                            @mainCategory
                                        </span>
                                        <div class="d-flex align-items-center gap-1 text-warning small ms-auto">
                                            <i class="bi bi-star-fill"></i>
                                            <span class="fw-bold text-dark">@avgRating.ToString("F1")</span>
                                        </div>
                                    </div>

                                    <h3 class="h5 font-display fw-bold mb-1">@coop.nom_cooperative</h3>
                                    <div class="d-flex align-items-center gap-2 text-muted small mb-3">
                                        <i class="bi bi-geo-alt text-terracotta"></i>
                                        <span>
                                            @(string.IsNullOrEmpty(coop.localisation) ? "" : coop.localisation + ", ")
                                            @(coop.ville ?? "Maroc")
                                        </span>
                                    </div>
                                    
                                    <p class="text-muted small mb-4 line-clamp-2">@(coop.description ?? "Découvrez le savoir-faire authentique de cette coopérative partenaire engagée.")</p>
                                    
                                    <div class="pt-3 border-top d-flex align-items-center justify-content-between mt-auto">
                                        <div class="d-flex align-items-center gap-3 text-muted" style="font-size: 0.8rem;">
                                            <span><i class="bi bi-calendar-check me-1"></i> Partenaire depuis @coop.created_at.Year</span>
                                        </div>
                                        <a asp-controller="Catalog" asp-action="Index" asp-route-cooperative="@coop.id" class="btn btn-link text-majorelle p-0 text-decoration-none small fw-bold hover-translate-x">
                                            Voir produits <i class="bi bi-arrow-right icon-sm"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12 text-center py-5">
                        <i class="bi bi-shop h1 text-muted opacity-20 mb-3 d-block"></i>
                        <p class="text-muted">Aucune coopérative trouvée pour le moment.</p>
                    </div>
                }
            </div>
        </div>
    </section>

    <!-- Join CTA Section -->
    <section class="py-10 bg-gradient-soft">
        <div class="container">
            <div class="cta-banner max-w-5xl mx-auto bg-white rounded-5 shadow-elevated border border-light-subtle overflow-hidden">
                <div class="row g-0">
                    <div class="col-md-7 p-5 p-md-8 d-flex flex-column justify-content-center">
                        <span class="inline-flex-badge-terracotta mb-4">
                            <i class="bi bi-award me-2"></i>
                            Rejoignez-nous
                        </span>
                        <h2 class="display-6 font-display fw-bold mb-4">Vous êtes une coopérative ?</h2>
                        <p class="lead-sm text-muted mb-5">
                            Rejoignez notre plateforme et vendez vos produits à une clientèle internationale. 
                            Nous vous accompagnons dans la digitalisation de votre activité.
                        </p>
                        <div class="d-flex justify-content-center">
                            <a asp-controller="Auth" asp-action="Register" asp-route-type="cooperative" class="btn btn-hero btn-lg px-5 rounded-pill shadow-sm transition-all hover-lift">
                                Devenir partenaire
                            </a>
                        </div>
                    </div>
                    <div class="col-md-5 position-relative d-none d-md-block">
                        <img src="~/images/cta_artisan.jpg"
                             class="position-absolute h-100 w-100 object-fit-cover" alt="Artisanes">
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Values Section -->
    <section class="py-10 bg-white">
        <div class="container">
            <div class="text-center max-w-2xl mx-auto mb-10">
                <h2 class="display-6 font-display fw-bold mb-4">Nos engagements</h2>
                <p class="text-muted">Chaque produit que vous achetez contribue à un commerce plus juste et durable</p>
            </div>
            
            <div class="row g-4">
                <div class="col-md-4 text-center p-4">
                    <div class="value-icon-circle bg-terracotta mx-auto mb-4 animate-float">
                        <i class="bi bi-patch-check-fill text-white" style="font-size: 2.2rem; line-height: 1;"></i>
                    </div>
                    <h3 class="h5 font-display fw-bold mb-3">Commerce Équitable</h3>
                    <p class="small text-muted mb-0">Prix justes garantis pour les producteurs, sans intermédiaires. 70% du prix revient directement aux coopératives.</p>
                </div>
                <div class="col-md-4 text-center p-4">
                    <div class="value-icon-circle bg-majorelle mx-auto mb-4 animate-float" style="animation-delay: 1s">
                        <i class="bi bi-tree-fill text-white" style="font-size: 2.2rem; line-height: 1;"></i>
                    </div>
                    <h3 class="h5 font-display fw-bold mb-3">Production Durable</h3>
                    <p class="small text-muted mb-0">Méthodes de production respectueuses de l'environnement et certifiées biologiques pour la majorité de nos produits.</p>
                </div>
                <div class="col-md-4 text-center p-4">
                    <div class="value-icon-circle bg-sable mx-auto mb-4 animate-float" style="animation-delay: 2s">
                        <i class="bi bi-heart-fill text-white" style="font-size: 2.2rem; line-height: 1;"></i>
                    </div>
                    <h3 class="h5 font-display fw-bold mb-3">Impact Social</h3>
                    <p class="small text-muted mb-0">Soutien à l'autonomisation des femmes rurales et au développement économique des régions isolées du Maroc.</p>
                </div>
            </div>
        </div>
    </section>
</div>

<style>
    .rounded-5 {
        border-radius: 1.5rem !important;
    }
    .stat-badge {
        width: 56px;
        height: 56px;
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
    }
    
    .coop-card:hover .coop-img-wrapper img {
        transform: scale(1.1);
    }
    
    .coop-overlay {
        background: linear-gradient(to top, rgba(0,0,0,0.7), transparent);
    }
    
    .value-icon-circle {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }
    
    .bg-gradient-soft {
        background: linear-gradient(135deg, rgba(192, 85, 34, 0.05) 0%, rgba(0, 61, 142, 0.05) 100%);
    }

    #categoryFilter {
        background-color: #1a1a1a;
        color: white;
        border: none;
    }

    #categoryFilter:hover {
        background-color: #333;
    }

    .filter-btn.active {
        background-color: var(--terracotta) !important;
        color: white !important;
    }

    .filter-btn:hover:not(.active) {
        background-color: var(--terracotta-10);
        color: var(--terracotta);
    }
    
    .dropdown-menu {
        min-width: 200px;
    }

    .hover-translate-x i { transition: transform 0.3s; }
    .hover-translate-x:hover i { transform: translateX(5px); }
    
    .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const filterBtns = document.querySelectorAll('.filter-btn');
            const coopItems = document.querySelectorAll('.coop-item');
            
            filterBtns.forEach(btn => {
                btn.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    // Update active state
                    filterBtns.forEach(b => b.classList.remove('active'));
                    this.classList.add('active');
                    
                    const category = this.getAttribute('data-category');
                    const filterLabel = document.querySelector('#categoryFilter span');
                    if (filterLabel) filterLabel.textContent = this.textContent;
                    
                    coopItems.forEach(item => {
                        if (category === 'all' || item.getAttribute('data-category') === category) {
                            item.style.display = 'block';
                            item.classList.add('animate-fade-in-up');
                        } else {
                            item.style.display = 'none';
                        }
                    });
                });
            });
        });
    </script>
}
