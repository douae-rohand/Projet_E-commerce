@model List<Projet__E_commerce.Models.ProductListItemViewModel>
@{
    Layout = null;
    ViewData["Title"] = "Gestion des Produits";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
</head>
<body class="bg-light">
    <div class="d-flex">
        <!-- Sidebar -->
        <aside class="bg-white border-end vh-100 sticky-top d-none d-lg-block" style="width: 280px;">
            <div class="p-4 border-bottom">
                <a href="/" class="d-flex align-items-center gap-2 text-decoration-none">
                    <div class="rounded-3 bg-terracotta p-2 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                        <i class="bi bi-flower1 text-white h5 mb-0"></i>
                    </div>
                    <div>
                        <h6 class="fw-bold mb-0 text-dark">CoopMaroc</h6>
                        <p class="small text-muted mb-0" style="font-size: 10px;">ESPACE ADMIN</p>
                    </div>
                </a>
            </div>
            
            <nav class="nav flex-column p-3 gap-1">
                <a class="nav-link text-muted rounded-3 d-flex align-items-center gap-3 py-2 px-3" href="@Url.Action("Dashboard", "Admin")"><i class="bi bi-speedometer2"></i> Tableau de bord</a>
                <a class="nav-link active rounded-3 d-flex align-items-center gap-3 py-2 px-3" href="@Url.Action("Products", "Admin")"><i class="bi bi-box-seam"></i> Produits</a>
                <a class="nav-link text-muted rounded-3 d-flex align-items-center gap-3 py-2 px-3" href="@Url.Action("Orders", "Admin")"><i class="bi bi-cart3"></i> Commandes</a>
                <a class="nav-link text-muted rounded-3 d-flex align-items-center gap-3 py-2 px-3" href="@Url.Action("Profile", "Admin")"><i class="bi bi-gear"></i> Profil</a>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="flex-grow-1 p-4 p-md-5">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show border-0 shadow-sm rounded-4 mb-4" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show border-0 shadow-sm rounded-4 mb-4" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <header class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-4 mb-5">
                <div>
                    <h1 class="font-display fw-bold mb-1">Gestion des Produits</h1>
                    <p class="text-muted mb-0 small">Gérez vos produits et leurs variantes</p>
                </div>
                <div class="d-flex gap-2">
                    <a href="@Url.Action("CreateProduct", "Admin")" class="btn btn-primary rounded-3 px-4 py-2 small fw-bold shadow-soft">
                        <i class="bi bi-plus-lg me-2"></i> Nouveau produit
                    </a>
                </div>
            </header>

            <!-- Products Table -->
            <div class="card border-0 shadow-soft rounded-4 overflow-hidden">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr class="small text-muted text-uppercase fw-bold border-0">
                                <th class="border-0 px-4 py-3">Produit</th>
                                <th class="border-0 px-4 py-3">Catégorie</th>
                                <th class="border-0 px-4 py-3">Variantes</th>
                                <th class="border-0 px-4 py-3">Stock</th>
                                <th class="border-0 px-4 py-3">Prix</th>
                                <th class="border-0 px-4 py-3">Statut</th>
                                <th class="border-0 px-4 py-3 text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Any())
                            {
                                @foreach (var product in Model)
                                {
                                    <tr>
                                        <td class="px-4 py-3">
                                            <div>
                                                <h6 class="fw-bold mb-0">@product.NomP</h6>
                                                @if (!string.IsNullOrEmpty(product.Description))
                                                {
                                                    <p class="small text-muted mb-0 text-truncate" style="max-width: 300px;">@product.Description</p>
                                                }
                                            </div>
                                        </td>
                                        <td class="px-4 py-3">
                                            <span class="badge bg-light text-dark">@product.NomCategorie</span>
                                        </td>
                                        <td class="px-4 py-3">
                                            <span class="badge bg-primary-subtle text-primary">@product.NombreVariantes variante(s)</span>
                                        </td>
                                        <td class="px-4 py-3">
                                            <span class="@(product.StockTotal <= product.SeuilAlerte ? "text-danger" : "text-success") fw-bold">
                                                @product.StockTotal
                                            </span>
                                            @if (product.StockTotal <= product.SeuilAlerte)
                                            {
                                                <i class="bi bi-exclamation-triangle-fill text-warning ms-1" title="Stock faible"></i>
                                            }
                                        </td>
                                        <td class="px-4 py-3">
                                            @if (product.PrixMin == product.PrixMax)
                                            {
                                                <span class="fw-bold">@product.PrixMin?.ToString("N2") MAD</span>
                                            }
                                            else
                                            {
                                                <span class="fw-bold">@product.PrixMin?.ToString("N2") - @product.PrixMax?.ToString("N2") MAD</span>
                                            }
                                        </td>
                                        <td class="px-4 py-3">
                                            @if (product.Statut == "active")
                                            {
                                                <span class="badge bg-success-subtle text-success">Actif</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger-subtle text-danger">Inactif</span>
                                            }
                                        </td>
                                        <td class="px-4 py-3 text-end">
                                            <div class="btn-group btn-group-sm">
                                                <a href="@Url.Action("EditProduct", "Admin", new { id = product.IdP })" class="btn btn-outline-primary">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <button type="button" class="btn btn-outline-danger" onclick="confirmDelete(@product.IdP, '@product.NomP')">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7" class="text-center py-5 text-muted">
                                        <i class="bi bi-box-seam display-4 d-block mb-3"></i>
                                        <p class="mb-0">Aucun produit trouvé</p>
                                        <a href="@Url.Action("CreateProduct", "Admin")" class="btn btn-primary mt-3">Créer votre premier produit</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </main>
    </div>

    <!-- Delete Confirmation Form -->
    <form id="deleteForm" method="post" action="@Url.Action("DeleteProduct", "Admin")" style="display: none;">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" id="deleteProductId" />
    </form>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function confirmDelete(productId, productName) {
            if (confirm(`Êtes-vous sûr de vouloir supprimer le produit "${productName}" ?`)) {
                document.getElementById('deleteProductId').value = productId;
                document.getElementById('deleteForm').submit();
            }
        }
    </script>

    <style>
        :root {
            --primary: #5A7EB8;
            --terracotta: #D87A4F;
            --sable: rgba(229, 200, 136, 0.2);
        }
        .nav-link { font-weight: 500; font-size: 14px; transition: all 0.2s; }
        .nav-link.active { background: var(--primary); color: white !important; box-shadow: 0 4px 12px rgba(90, 126, 184, 0.3); }
        .nav-link:hover:not(.active) { background: #f8f9fa; color: var(--primary) !important; }
        .bg-primary-subtle { background-color: rgba(90, 126, 184, 0.1) !important; }
        .bg-success-subtle { background-color: rgba(25, 135, 84, 0.1) !important; }
        .bg-danger-subtle { background-color: rgba(220, 53, 69, 0.1) !important; }
    </style>
</body>
</html>
