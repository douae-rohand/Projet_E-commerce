@model Projet__E_commerce.Models.ProductManagementViewModel
@{
    Layout = null;
    ViewData["Title"] = "Modifier Produit";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin-animation.css" asp-append-version="true" />
</head>
<body class="admin-bg">
    <div class="bg-orb-3"></div>
    
    <div class="d-flex">
        <!-- Sidebar -->
        <aside class="bg-white border-end vh-100 sticky-top d-none d-lg-block shadow-sm" style="width: 280px; z-index: 1000;">
            <div class="p-4 border-bottom">
                <a href="/" class="d-flex align-items-center gap-2 text-decoration-none">
                     <div class="rounded-3 bg-terracotta p-2 d-flex align-items-center justify-content-center shadow-sm" style="width: 40px; height: 40px;">
                        <i class="bi bi-flower1 text-white h5 mb-0"></i>
                    </div>
                    <div>
                        <h6 class="fw-bold mb-0 text-dark">CoopMaroc</h6>
                        <p class="small text-muted mb-0" style="font-size: 10px;">ESPACE ADMIN</p>
                    </div>
                </a>
            </div>
            
            <nav class="nav flex-column p-3 gap-1">
                <a class="nav-link text-muted rounded-3 d-flex align-items-center gap-3 py-2 px-3 mb-1 hover-effect" href="@Url.Action("Dashboard", "Admin")"><i class="bi bi-speedometer2"></i> Tableau de bord</a>
                <a class="nav-link active rounded-3 d-flex align-items-center gap-3 py-2 px-3 mb-1 shadow-sm" href="@Url.Action("Products", "Admin")"><i class="bi bi-box-seam"></i> Produits</a>
                <a class="nav-link text-muted rounded-3 d-flex align-items-center gap-3 py-2 px-3 mb-1 hover-effect" href="@Url.Action("Orders", "Admin")"><i class="bi bi-cart3"></i> Commandes</a>
                <a class="nav-link text-muted rounded-3 d-flex align-items-center gap-3 py-2 px-3 mb-1 hover-effect" href="@Url.Action("Profile", "Admin")"><i class="bi bi-gear"></i> Profil</a>
                <div class="mt-auto pt-4 border-top">
                    <a class="nav-link text-danger rounded-3 d-flex align-items-center gap-3 py-2 px-3 hover-effect" href="@Url.Action("Logout", "Account")">
                        <i class="bi bi-box-arrow-right"></i> Déconnexion
                    </a>
                </div>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="flex-grow-1 p-4 p-md-5">
            <header class="mb-5">
                <div class="d-flex align-items-center gap-3 mb-2">
                    <a href="@Url.Action("Products", "Admin")" class="btn btn-light rounded-circle shadow-sm hover-lift" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                        <i class="bi bi-arrow-left"></i>
                    </a>
                    <div>
                        <h1 class="font-display fw-bold mb-1 text-dark">Modifier Produit</h1>
                        <p class="text-muted mb-0 small">@Model.NomP</p>
                    </div>
                </div>
            </header>

            <div class="row">
                <div class="col-lg-8">
                    <div class="card card-premium border-0 rounded-4 p-4 mb-4">
                        <form method="post" asp-action="EditProduct">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="IdP" />
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3"></div>

                            <h5 class="fw-bold mb-4">Informations du produit</h5>

                            <div class="mb-3">
                                <label asp-for="NomP" class="form-label fw-bold">Nom du produit *</label>
                                <input asp-for="NomP" class="form-control" />
                                <span asp-validation-for="NomP" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Description" class="form-label fw-bold">Description</label>
                                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="IdC" class="form-label fw-bold">Catégorie *</label>
                                    <select asp-for="IdC" class="form-select">
                                        @foreach (var cat in Model.Categories)
                                        {
                                            <option value="@cat.idC">@cat.nom</option>
                                        }
                                    </select>
                                    <span asp-validation-for="IdC" class="text-danger small"></span>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label asp-for="SeuilAlerte" class="form-label fw-bold">Seuil d'alerte stock</label>
                                    <input asp-for="SeuilAlerte" type="number" class="form-control" />
                                </div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Statut" class="form-label fw-bold">Statut</label>
                                <select asp-for="Statut" class="form-select">
                                    <option value="active">Actif</option>
                                    <option value="inactive">Inactif</option>
                                </select>
                            </div>

                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary px-4 rounded-pill shadow-sm hover-lift">
                                    <i class="bi bi-check-lg me-2"></i>Enregistrer
                                </button>
                                <a href="@Url.Action("Products", "Admin")" class="btn btn-outline-secondary px-4 rounded-pill">Annuler</a>
                            </div>
                        </form>
                    </div>

                    <!-- Variantes Section -->
                    <div class="card card-premium border-0 rounded-4 p-4">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h5 class="fw-bold mb-0">Variantes</h5>
                            <span class="badge bg-light text-dark border">@Model.Variantes.Count variantes</span>
                        </div>

                        <div class="row g-3 mb-4">
                            <div class="col-12">
                                <h6 class="fw-bold mb-2">Ajouter une variante</h6>
                                <form method="post" asp-action="AddVariant" enctype="multipart/form-data" class="row g-2">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="productId" value="@Model.IdP" />
                                    <div class="col-sm-3">
                                        <label class="form-label small fw-bold">Prix</label>
                                        <input name="prix" type="number" step="0.01" class="form-control form-control-sm" required />
                                    </div>
                                    <div class="col-sm-2">
                                        <label class="form-label small fw-bold">Quantité</label>
                                        <input name="quantite" type="number" class="form-control form-control-sm" min="0" required />
                                    </div>
                                    <div class="col-sm-2">
                                        <label class="form-label small fw-bold">Taille</label>
                                        <input name="taille" class="form-control form-control-sm" />
                                    </div>
                                    <div class="col-sm-2">
                                        <label class="form-label small fw-bold">Couleur</label>
                                        <input name="couleur" class="form-control form-control-sm" />
                                    </div>
                                    <div class="col-sm-3">
                                        <label class="form-label small fw-bold">Poids</label>
                                        <input name="poids" class="form-control form-control-sm" />
                                    </div>
                                    <div class="col-sm-6">
                                        <label class="form-label small fw-bold">Photo</label>
                                        <input name="photoFile" type="file" accept="image/*" class="form-control form-control-sm" />
                                    </div>
                                    <div class="col-sm-6 d-flex align-items-end justify-content-end">
                                        <button type="submit" class="btn btn-sm btn-primary rounded-pill px-3">
                                            <i class="bi bi-plus-lg me-1"></i>Ajouter la variante
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="bg-light">
                                    <tr class="small text-muted text-uppercase fw-bold border-0">
                                        <th class="border-0 ps-3">Photo</th>
                                        <th class="border-0">Prix</th>
                                        <th class="border-0">Taille</th>
                                        <th class="border-0">Couleur</th>
                                        <th class="border-0">Stock</th>
                                        <th class="border-0">Poids</th>
                                        <th class="border-0 text-end pe-3">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Variantes.Any())
                                    {
                                        @foreach (var v in Model.Variantes)
                                        {
                                            var collapseId = $"edit-variant-{v.idV}";
                                            <tr>
                                                <td class="ps-3">
                                                    @if (!string.IsNullOrEmpty(v.photo))
                                                    {
                                                        <img src="@v.photo" alt="Variante" class="rounded" style="width:48px; height:48px; object-fit:cover;" />
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted small">-</span>
                                                    }
                                                </td>
                                                <td class="fw-bold text-primary">@v.prix.ToString("N2") <small>MAD</small></td>
                                                <td>
                                                    @if(!string.IsNullOrEmpty(v.taille)) {
                                                        <span class="badge bg-light text-dark border">@v.taille</span>
                                                    } else {
                                                        <span class="text-muted">-</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if(!string.IsNullOrEmpty(v.couleur)) {
                                                        <span class="d-inline-block rounded-circle border" style="width: 12px; height: 12px; background-color: @v.couleur;" title="@v.couleur"></span>
                                                        <span class="small ms-1">@v.couleur</span>
                                                    } else {
                                                        <span class="text-muted">-</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (v.quantite == 0)
                                                    {
                                                        <span class="badge bg-danger text-white rounded-pill">0</span>
                                                    }
                                                    else if (v.quantite <= Model.SeuilAlerte)
                                                    {
                                                        <span class="badge bg-warning-subtle text-warning rounded-pill">
                                                            <i class="bi bi-exclamation-circle me-1"></i>@v.quantite
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="fw-medium">@v.quantite</span>
                                                    }
                                                </td>
                                                <td class="text-muted small">@(v.poids ?? "-")</td>
                                                <td class="text-end pe-3">
                                                    <div class="btn-group btn-group-sm" role="group">
                                                        <button class="btn btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#@collapseId" aria-expanded="false">
                                                            <i class="bi bi-pencil"></i>
                                                        </button>
                                                        <form method="post" asp-action="DeleteVariant" class="d-inline" onsubmit="return confirm('Supprimer cette variante ?');">
                                                            @Html.AntiForgeryToken()
                                                            <input type="hidden" name="idV" value="@v.idV" />
                                                            <input type="hidden" name="productId" value="@Model.IdP" />
                                                            <button class="btn btn-outline-danger" type="submit">
                                                                <i class="bi bi-trash"></i>
                                                            </button>
                                                        </form>
                                                    </div>
                                                </td>
                                            </tr>
                                            <tr class="collapse" id="@collapseId">
                                                <td colspan="7">
                                                    <form method="post" asp-action="UpdateVariant" enctype="multipart/form-data" class="row g-2">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="idV" value="@v.idV" />
                                                        <input type="hidden" name="productId" value="@Model.IdP" />
                                                        <div class="col-sm-3">
                                                            <label class="form-label small fw-bold">Prix</label>
                                                            <input name="prix" type="number" step="0.01" class="form-control form-control-sm" value="@v.prix" required />
                                                        </div>
                                                        <div class="col-sm-2">
                                                            <label class="form-label small fw-bold">Quantité</label>
                                                            <input name="quantite" type="number" class="form-control form-control-sm" min="0" value="@v.quantite" required />
                                                        </div>
                                                        <div class="col-sm-2">
                                                            <label class="form-label small fw-bold">Taille</label>
                                                            <input name="taille" class="form-control form-control-sm" value="@v.taille" />
                                                        </div>
                                                        <div class="col-sm-2">
                                                            <label class="form-label small fw-bold">Couleur</label>
                                                            <input name="couleur" class="form-control form-control-sm" value="@v.couleur" />
                                                        </div>
                                                        <div class="col-sm-3">
                                                            <label class="form-label small fw-bold">Poids</label>
                                                            <input name="poids" class="form-control form-control-sm" value="@v.poids" />
                                                        </div>
                                                        <div class="col-sm-6">
                                                            <label class="form-label small fw-bold">Photo</label>
                                                            <input name="photoFile" type="file" accept="image/*" class="form-control form-control-sm" />
                                                            @if (!string.IsNullOrEmpty(v.photo))
                                                            {
                                                                <small class="text-muted d-block mt-1">Photo actuelle : @v.photo</small>
                                                            }
                                                        </div>
                                                        <div class="col-sm-6 d-flex align-items-end justify-content-end">
                                                            <button type="submit" class="btn btn-sm btn-primary rounded-pill px-3">
                                                                <i class="bi bi-save me-1"></i>Enregistrer
                                                            </button>
                                                        </div>
                                                    </form>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="7" class="text-center text-muted py-4">Aucune variante pour le moment.</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
