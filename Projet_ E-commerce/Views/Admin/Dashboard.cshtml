@{
    Layout = null; // Admin dashboards often have their own sidebar layout
    ViewData["Title"] = "Espace Coopérative - SoukDigital";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
</head>
<body class="bg-light">
    <div class="d-flex">
        <!-- Sidebar -->
        <aside class="bg-white border-end vh-100 sticky-top d-none d-lg-block" style="width: 280px;">
            <div class="p-4 border-bottom">
                <a href="/" class="d-flex align-items-center gap-2 text-decoration-none">
                    <div class="rounded-3 bg-terracotta p-2 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                        <i class="bi bi-flower1 text-white h5 mb-0"></i>
                    </div>
                    <div>
                        <h6 class="fw-bold mb-0 text-dark">CoopMaroc</h6>
                        <p class="small text-muted mb-0" style="font-size: 10px;">ESPACE ADMIN</p>
                    </div>
                </a>
            </div>
            
            <nav class="nav flex-column p-3 gap-1">
                <a class="nav-link active rounded-3 d-flex align-items-center gap-3 py-2 px-3" href="#"><i class="bi bi-speedometer2"></i> Tableau de bord</a>
                <a class="nav-link text-muted rounded-3 d-flex align-items-center gap-3 py-2 px-3" href="#"><i class="bi bi-box-seam"></i> Produits</a>
                <a class="nav-link text-muted rounded-3 d-flex align-items-center gap-3 py-2 px-3" href="#"><i class="bi bi-cart3"></i> Commandes</a>
                <a class="nav-link text-muted rounded-3 d-flex align-items-center gap-3 py-2 px-3" href="#"><i class="bi bi-people"></i> Membres</a>
                <a class="nav-link text-muted rounded-3 d-flex align-items-center gap-3 py-2 px-3" href="#"><i class="bi bi-tag"></i> Catégories</a>
                <a class="nav-link text-muted rounded-3 d-flex align-items-center gap-3 py-2 px-3" href="#"><i class="bi bi-bar-chart"></i> Statistiques</a>
                <a class="nav-link text-muted rounded-3 d-flex align-items-center gap-3 py-2 px-3" href="#"><i class="bi bi-gear"></i> Paramètres</a>
            </nav>

            <div class="mt-auto p-3 border-top position-absolute bottom-0 w-100">
                <div class="d-flex align-items-center gap-3 p-2 bg-light rounded-3">
                    <div class="rounded-circle bg-terracotta text-white d-flex align-items-center justify-content-center" style="width: 32px; height: 32px; font-size: 12px; font-weight: bold;">AA</div>
                    <div class="overflow-hidden">
                        <p class="small fw-bold mb-0 text-truncate">Aicha Ait Brahim</p>
                        <p class="small text-muted mb-0" style="font-size: 10px;">Responsable</p>
                    </div>
                    <a href="#" class="ms-auto text-muted"><i class="bi bi-box-arrow-right"></i></a>
                </div>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="flex-grow-1 p-4 p-md-5">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show border-0 shadow-sm rounded-4 mb-4" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <header class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-4 mb-5">
                <div>
                    <h1 class="font-display fw-bold mb-1">Coopérative Tissaliwine</h1>
                    <p class="text-muted mb-0 small"><i class="bi bi-geo-alt me-1"></i> Souss-Massa, Maroc</p>
                </div>
                <div class="d-flex gap-2">
                    <button class="btn btn-outline-dark rounded-3 px-4 py-2 small fw-bold"><i class="bi bi-download me-2"></i> Exporter</button>
                    <button class="btn btn-primary rounded-3 px-4 py-2 small fw-bold shadow-soft"><i class="bi bi-plus-lg me-2"></i> Nouveau produit</button>
                </div>
            </header>

            <!-- Stats Grid -->
            <div class="row g-4 mb-5">
                <div class="col-sm-6 col-xl-3">
                    <div class="card border-0 shadow-soft rounded-4 p-4 h-100">
                        <div class="d-flex justify-content-between mb-3">
                            <p class="text-muted small fw-bold text-uppercase mb-0">Ventes du mois</p>
                            <div class="text-primary"><i class="bi bi-graph-up-arrow"></i></div>
                        </div>
                        <h3 class="fw-bold mb-2">45,200 MAD</h3>
                        <p class="text-success small fw-bold mb-0"><i class="bi bi-arrow-up-right me-1"></i> +18% vs mois dernier</p>
                    </div>
                </div>
                <div class="col-sm-6 col-xl-3">
                    <div class="card border-0 shadow-soft rounded-4 p-4 h-100">
                        <div class="d-flex justify-content-between mb-3">
                            <p class="text-muted small fw-bold text-uppercase mb-0">Commandes</p>
                            <div class="text-primary"><i class="bi bi-cart3"></i></div>
                        </div>
                        <h3 class="fw-bold mb-2">124</h3>
                        <p class="text-success small fw-bold mb-0"><i class="bi bi-arrow-up-right me-1"></i> +12% vs mois dernier</p>
                    </div>
                </div>
                <div class="col-sm-6 col-xl-3">
                    <div class="card border-0 shadow-soft rounded-4 p-4 h-100">
                        <div class="d-flex justify-content-between mb-3">
                            <p class="text-muted small fw-bold text-uppercase mb-0">Produits actifs</p>
                            <div class="text-primary"><i class="bi bi-box-seam"></i></div>
                        </div>
                        <h3 class="fw-bold mb-2">48</h3>
                        <p class="text-success small fw-bold mb-0"><i class="bi bi-plus-circle me-1"></i> +3 nouveaux</p>
                    </div>
                </div>
                <div class="col-sm-6 col-xl-3">
                    <div class="card border-0 shadow-soft rounded-4 p-4 h-100">
                        <div class="d-flex justify-content-between mb-3">
                            <p class="text-muted small fw-bold text-uppercase mb-0">Membres actifs</p>
                            <div class="text-primary"><i class="bi bi-people"></i></div>
                        </div>
                        <h3 class="fw-bold mb-2">25</h3>
                        <p class="text-muted small fw-bold mb-0">Statut stable</p>
                    </div>
                </div>
            </div>

            <div class="row g-4 mb-5">
                <!-- Recent Orders -->
                <div class="col-lg-8">
                    <div class="card border-0 shadow-soft rounded-4 overflow-hidden h-100">
                        <div class="card-header bg-white border-0 p-4 d-flex justify-content-between align-items-center">
                            <h5 class="fw-bold mb-0">Dernières commandes</h5>
                            <a href="#" class="small text-primary text-decoration-none fw-bold">Voir tout</a>
                        </div>
                        <div class="table-responsive px-4 pb-4">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light rounded-3">
                                    <tr class="small text-muted text-uppercase fw-bold border-0">
                                        <th class="border-0 px-3 py-3 rounded-start-3">N° Commande</th>
                                        <th class="border-0 px-3 py-3">Client</th>
                                        <th class="border-0 px-3 py-3">Statut</th>
                                        <th class="border-0 px-3 py-3">Total</th>
                                        <th class="border-0 px-3 py-3 rounded-end-3 text-end">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        var recentOrders = new OrderViewModel[] {
                                            new OrderViewModel { Id = "#CO-2024-089", Name = "Fatima Benali", Status = "Expédiée", Total = 540, StatusClass = "bg-primary-subtle text-primary" },
                                            new OrderViewModel { Id = "#CO-2024-088", Name = "Pierre Dupont", Status = "En préparation", Total = 190, StatusClass = "bg-warning-subtle text-warning" },
                                            new OrderViewModel { Id = "#CO-2024-087", Name = "Sarah Miller", Status = "Livrée", Total = 850, StatusClass = "bg-success-subtle text-success" }
                                        };
                                    }
                                    @foreach (var order in recentOrders) {
                                        <tr>
                                            <td class="px-3 py-3 fw-bold">@order.Id</td>
                                            <td class="px-3 py-3">@order.Name</td>
                                            <td class="px-3 py-3"><span class="badge rounded-pill @order.StatusClass px-3 py-2">@order.Status</span></td>
                                            <td class="px-3 py-3 fw-bold">@order.Total.ToString("N0") MAD</td>
                                            <td class="px-3 py-3 text-end"><button class="btn btn-light btn-sm rounded-circle"><i class="bi bi-three-dots-vertical"></i></button></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Best Sellers -->
                <div class="col-lg-4">
                    <div class="card border-0 shadow-soft rounded-4 p-4 h-100">
                        <h5 class="fw-bold mb-4">Meilleures ventes</h5>
                        <div class="d-flex flex-column gap-4">
                            @{
                                var topProducts = new ProductViewModel[] {
                                    new ProductViewModel { Name = "Huile d'Argan Bio", Reviews = 156, Price = 28080 },
                                    new ProductViewModel { Name = "Amlou aux Amandes", Reviews = 98, Price = 9310 },
                                    new ProductViewModel { Name = "Pack Beauté Argan", Reviews = 45, Price = 13500 }
                                };
                            }
                            @foreach (var p in topProducts) {
                                <div class="d-flex align-items-center gap-3">
                                    <div class="rounded-3 bg-sable p-2 d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                                        <i class="bi bi-leaf text-terracotta"></i>
                                    </div>
                                    <div class="flex-grow-1 overflow-hidden">
                                        <h6 class="fw-bold mb-1 text-truncate">@p.Name</h6>
                                        <p class="small text-muted mb-0">@p.Reviews ventes</p>
                                    </div>
                                    <p class="fw-bold mb-0 small">@p.Price.ToString("N0") MAD</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <style>
        :root {
            --primary: #5A7EB8;
            --terracotta: #D87A4F;
            --sable: rgba(229, 200, 136, 0.2);
        }
        .nav-link { font-weight: 500; font-size: 14px; transition: all 0.2s; }
        .nav-link.active { background: var(--primary); color: white !important; box-shadow: 0 4px 12px rgba(90, 126, 184, 0.3); }
        .nav-link:hover:not(.active) { background: #f8f9fa; color: var(--primary) !important; }
        .bg-primary-subtle { background-color: rgba(90, 126, 184, 0.1) !important; }
        .bg-warning-subtle { background-color: rgba(255, 193, 7, 0.1) !important; }
        .bg-success-subtle { background-color: rgba(25, 135, 84, 0.1) !important; }
    </style>
</body>
</html>
