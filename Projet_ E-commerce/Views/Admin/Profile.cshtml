@model Projet__E_commerce.Models.AdminProfileViewModel
@{
    Layout = null;
    ViewData["Title"] = "Profil Coopérative";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin-animation.css" asp-append-version="true" />
</head>
<body class="admin-bg">
    <div class="bg-orb-3"></div>
    
    <div class="d-flex">
        <!-- Sidebar -->
        <aside class="bg-white border-end vh-100 sticky-top d-none d-lg-block shadow-sm" style="width: 280px; z-index: 1000;">
            <div class="p-4 border-bottom">
                <a href="/" class="d-flex align-items-center gap-2 text-decoration-none">
                     <div class="rounded-3 bg-terracotta p-2 d-flex align-items-center justify-content-center shadow-sm" style="width: 40px; height: 40px;">
                        <i class="bi bi-flower1 text-white h5 mb-0"></i>
                    </div>
                    <div>
                        <h6 class="fw-bold mb-0 text-dark">CoopMaroc</h6>
                        <p class="small text-muted mb-0" style="font-size: 10px;">ESPACE ADMIN</p>
                    </div>
                </a>
            </div>
            
            <nav class="nav flex-column p-3 gap-1">
                <a class="nav-link text-muted rounded-3 d-flex align-items-center gap-3 py-2 px-3 mb-1 hover-effect" href="@Url.Action("Dashboard", "Admin")"><i class="bi bi-speedometer2"></i> Tableau de bord</a>
                <a class="nav-link text-muted rounded-3 d-flex align-items-center gap-3 py-2 px-3 mb-1 hover-effect" href="@Url.Action("Products", "Admin")"><i class="bi bi-box-seam"></i> Produits</a>
                <a class="nav-link text-muted rounded-3 d-flex align-items-center gap-3 py-2 px-3 mb-1 hover-effect" href="@Url.Action("Orders", "Admin")"><i class="bi bi-cart3"></i> Commandes</a>
                <a class="nav-link active rounded-3 d-flex align-items-center gap-3 py-2 px-3 mb-1 shadow-sm" href="@Url.Action("Profile", "Admin")"><i class="bi bi-gear"></i> Profil</a>
                <div class="mt-auto pt-4 border-top">
                    <a class="nav-link text-danger rounded-3 d-flex align-items-center gap-3 py-2 px-3 hover-effect" href="@Url.Action("Logout", "Account")">
                        <i class="bi bi-box-arrow-right"></i> Déconnexion
                    </a>
                </div>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="flex-grow-1 p-4 p-md-5">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show border-0 shadow-sm rounded-4 mb-4" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show border-0 shadow-sm rounded-4 mb-4" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <header class="mb-5">
                <h1 class="font-display fw-bold mb-1 text-dark">Profil de la Coopérative</h1>
                <p class="text-muted mb-0 small">Gérez les informations de votre coopérative</p>
            </header>

            <div class="row">
                <div class="col-lg-8">
                    <div class="card card-premium border-0 rounded-4 p-4 h-100">
                        <form method="post" enctype="multipart/form-data" asp-action="Profile">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="Logo" />
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3"></div>

                            <h5 class="fw-bold mb-4">Informations générales</h5>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Email</label>
                                <input type="text" class="form-control" value="@Model.Email" disabled />
                                <small class="text-muted">L'email ne peut pas être modifié</small>
                            </div>

                            <div class="mb-3">
                                <label asp-for="NomCooperative" class="form-label fw-bold">Nom de la coopérative *</label>
                                <input asp-for="NomCooperative" class="form-control" />
                                <span asp-validation-for="NomCooperative" class="text-danger small"></span>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label asp-for="Ville" class="form-label fw-bold">Ville</label>
                                    <input asp-for="Ville" class="form-control" placeholder="Ex: Agadir" />
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Telephone" class="form-label fw-bold">Téléphone</label>
                                    <input asp-for="Telephone" class="form-control" placeholder="+212 6XX-XXXXXX" />
                                    <span asp-validation-for="Telephone" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Localisation" class="form-label fw-bold">Localisation</label>
                                <textarea asp-for="Localisation" class="form-control" rows="2" placeholder="Adresse complète de la coopérative"></textarea>
                            </div>

                            <div class="mb-4">
                                <label asp-for="Description" class="form-label fw-bold">Description</label>
                                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Décrivez votre coopérative, son histoire, ses valeurs..."></textarea>
                            </div>

                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary px-4 rounded-pill shadow-sm hover-lift">
                                    <i class="bi bi-check-lg me-2"></i>Enregistrer
                                </button>
                                <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-outline-secondary px-4 rounded-pill">Annuler</a>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="card card-premium border-0 rounded-4 p-4 mb-4">
                        <h6 class="fw-bold mb-3">Logo de la coopérative</h6>
                        
                        @if (!string.IsNullOrEmpty(Model.Logo))
                        {
                            <div class="text-center mb-3">
                                <img src="@Model.Logo" alt="Logo" class="img-fluid rounded-3 shadow-sm" style="max-height: 200px;" />
                            </div>
                        }
                        else
                        {
                            <div class="text-center mb-3 p-5 bg-light rounded-3">
                                <i class="bi bi-image display-4 text-muted"></i>
                                <p class="small text-muted mb-0 mt-2">Aucun logo</p>
                            </div>
                        }

                        <form method="post" enctype="multipart/form-data" asp-action="Profile" id="logoForm">
                            @Html.AntiForgeryToken()
                            <!-- Hidden fields to preserve other data -->
                            <input type="hidden" asp-for="NomCooperative" />
                            <input type="hidden" asp-for="Localisation" />
                            <input type="hidden" asp-for="Ville" />
                            <input type="hidden" asp-for="Telephone" />
                            <input type="hidden" asp-for="Description" />
                            
                            <div class="mb-3">
                                <label class="form-label fw-bold small">Changer le logo</label>
                                <input type="file" name="logoFile" class="form-control form-control-sm" accept="image/*" id="logoInput" />
                                <small class="text-muted">JPG, PNG, WEBP (max 2MB)</small>
                            </div>
                            <div class="mb-3 text-center" id="logoPreviewWrapper" style="display:none;">
                                <img id="logoPreview" class="img-fluid rounded-3 shadow-sm" style="max-height: 200px;" alt="Prévisualisation logo" />
                            </div>
                            <button type="submit" class="btn btn-sm btn-outline-primary w-100 rounded-pill">
                                <i class="bi bi-upload me-1"></i>Télécharger
                            </button>
                        </form>
                    </div>

                    <div class="card card-premium border-0 rounded-4 p-4 bg-light">
                        <h6 class="fw-bold mb-3"><i class="bi bi-info-circle me-2"></i>Informations</h6>
                        <ul class="small text-muted mb-0 p-0" style="list-style-type: none;">
                            <li class="mb-2 d-flex justify-content-between">
                                <span>Compte créé le:</span> 
                                <span class="fw-medium text-dark">@Model.CreatedAt.ToString("dd/MM/yyyy")</span>
                            </li>
                            <li class="mb-2 d-flex justify-content-between">
                                <span>Dernière modification:</span> 
                                <span class="fw-medium text-dark">@Model.UpdatedAt.ToString("dd/MM/yyyy")</span>
                            </li>
                            <li class="d-flex justify-content-between">
                                <span>Statut:</span>
                                @if(Model.EstActif) {
                                    <span class="badge bg-success-subtle text-success rounded-pill">Actif</span>
                                } else {
                                    <span class="badge bg-danger-subtle text-danger rounded-pill">Inactif</span>
                                }
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const logoInput = document.getElementById('logoInput');
        const logoPreviewWrapper = document.getElementById('logoPreviewWrapper');
        const logoPreview = document.getElementById('logoPreview');

        logoInput?.addEventListener('change', (e) => {
            const file = e.target.files?.[0];
            if (!file) {
                logoPreviewWrapper.style.display = 'none';
                logoPreview.src = '';
                return;
            }
            const reader = new FileReader();
            reader.onload = (ev) => {
                logoPreview.src = ev.target?.result;
                logoPreviewWrapper.style.display = 'block';
            };
            reader.readAsDataURL(file);
        });
    </script>
</body>
</html>
