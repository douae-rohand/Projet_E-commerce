@model Projet__E_commerce.Models.AdminProfileViewModel
@{
    Layout = null;
    ViewData["Title"] = "Profil Coopérative";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin-animation.css" asp-append-version="true" />
</head>
<body class="admin-bg">
    <div class="bg-orb-3"></div>
    
    <div class="d-flex">
        <!-- Sidebar -->
        <aside class="bg-white border-end vh-100 sticky-top d-none d-lg-block shadow-sm" style="width: 280px; z-index: 1000;">
            <div class="p-4 border-bottom">
                <a href="/" class="d-flex align-items-center gap-2 text-decoration-none">
                     <div class="rounded-3 bg-terracotta p-2 d-flex align-items-center justify-content-center shadow-sm" style="width: 40px; height: 40px;">
                        <i class="bi bi-flower1 text-white h5 mb-0"></i>
                    </div>
                    <div>
                        <h6 class="fw-bold mb-0 text-dark">CoopMaroc</h6>
                        <p class="small text-muted mb-0" style="font-size: 10px;">ESPACE ADMIN</p>
                    </div>
                </a>
            </div>
            
            <nav class="nav flex-column p-3 gap-1">
                <a class="nav-link text-muted rounded-3 d-flex align-items-center gap-3 py-2 px-3 mb-1 hover-effect" href="@Url.Action("Dashboard", "Admin")"><i class="bi bi-speedometer2"></i> Tableau de bord</a>
                <a class="nav-link text-muted rounded-3 d-flex align-items-center gap-3 py-2 px-3 mb-1 hover-effect" href="@Url.Action("Products", "Admin")"><i class="bi bi-box-seam"></i> Produits</a>
                <a class="nav-link text-muted rounded-3 d-flex align-items-center gap-3 py-2 px-3 mb-1 hover-effect" href="@Url.Action("Orders", "Admin")"><i class="bi bi-cart3"></i> Commandes</a>
                <a class="nav-link active rounded-3 d-flex align-items-center gap-3 py-2 px-3 mb-1 shadow-sm" href="@Url.Action("Profile", "Admin")"><i class="bi bi-gear"></i> Profil</a>
                <div class="mt-auto pt-4 border-top">
                    <a class="nav-link text-danger rounded-3 d-flex align-items-center gap-3 py-2 px-3 hover-effect" href="@Url.Action("Logout", "Account")">
                        <i class="bi bi-box-arrow-right"></i> Déconnexion
                    </a>
                </div>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="flex-grow-1 p-4 p-md-5 d-flex align-items-center justify-content-center" style="min-height: 100vh;">
            <div class="container-fluid" style="max-width: 1000px;">
                
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show border-0 shadow-sm rounded-4 mb-4" role="alert">
                        <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show border-0 shadow-sm rounded-4 mb-4" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <div class="row g-4 justify-content-center">
                    <!-- Left: Identity Card Visual -->
                    <div class="col-lg-5 mb-4 mb-lg-0">
                        <div class="identity-card-wrapper animate-float">
                            <div class="identity-card">
                                <div class="card-header-band">
                                    <div class="chip"></div>
                                    <div class="logo-mark"><i class="bi bi-flower1"></i></div>
                                </div>
                                <div class="card-body-content">
                                    <div class="photo-zone">
                                        @if (!string.IsNullOrEmpty(Model.Logo))
                                        {
                                            <img src="@Model.Logo" alt="Logo" class="coop-logo" id="cardLogoPreview" />
                                        }
                                        else
                                        {
                                            <div class="coop-logo-placeholder">
                                                <i class="bi bi-image"></i>
                                            </div>
                                        }
                                        <label for="logoUpload" class="id-card-upload-btn" title="Changer le logo">
                                            <i class="bi bi-camera-fill"></i>
                                        </label>
                                    </div>
                                    <div class="info-zone">
                                        <h2 class="coop-name">@Model.NomCooperative</h2>
                                        <p class="coop-location"><i class="bi bi-geo-alt-fill me-1"></i> @(string.IsNullOrEmpty(Model.Ville) ? "Ville non définie" : Model.Ville)</p>
                                        <div class="meta-info">
                                            <div class="member-since">
                                                Membre depuis @Model.CreatedAt.ToString("yyyy")
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Card Body -->
                                <div class="id-card-body">
                                    <div class="id-row">
                                        <div class="id-label">NOM COOPÉRATIVE</div>
                                        <div class="id-value">@Model.NomCooperative</div>
                                    </div>
                                    <div class="id-row">
                                        <div class="id-label">LOCALISATION</div>
                                        <div class="id-value">
                                            <i class="bi bi-geo-alt-fill me-1"></i> @(string.IsNullOrEmpty(Model.Ville) ? "Non renseignée" : Model.Ville)
                                        </div>
                                    </div>
                                    <div class="id-row">
                                        <div class="id-label">ID ADMIN</div>
                                        <div class="id-value font-monospace">@Model.Id.ToString("D6")</div>
                                    </div>
                                </div>

                                <!-- Card Footer (Hologram & Barcode) -->
                                <div class="id-card-footer">
                                    <div class="hologram"></div>
                                    <div class="barcode">
                                        <i class="bi bi-upc-scan"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Right: Edit Form (Glass Panel) -->
                    <div class="col-lg-7 animate-slide-right">
                        <div class="glass-panel p-4 p-md-5">
                            <div class="d-flex align-items-center mb-4">
                                <div class="icon-box me-3">
                                    <i class="bi bi-pencil-fill"></i>
                                </div>
                                <h2 class="section-title mb-0">Modifier le Profil</h2>
                            </div>

                            <form asp-action="Profile" method="post" enctype="multipart/form-data" class="custom-form">
                                @Html.AntiForgeryToken()
                                
                                <div class="row g-4">
                                    <div class="col-md-6">
                                        <div class="form-floating-custom">
                                            <input asp-for="NomCooperative" class="form-control" placeholder="Nom de la coopérative" />
                                            <label asp-for="NomCooperative">Nom de la coopérative</label>
                                            <span asp-validation-for="NomCooperative" class="text-danger small"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating-custom">
                                            <input asp-for="Ville" class="form-control" placeholder="Ville" />
                                            <label asp-for="Ville">Ville</label>
                                            <span asp-validation-for="Ville" class="text-danger small"></span>
                                        </div>
                                    </div>
                                    
                                    <div class="col-md-6">
                                        <div class="form-floating-custom">
                                            <input asp-for="Telephone" class="form-control" placeholder="Téléphone" />
                                            <label asp-for="Telephone">Téléphone</label>
                                            <span asp-validation-for="Telephone" class="text-danger small"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating-custom">
                                            <input asp-for="Localisation" class="form-control" placeholder="Adresse complète" />
                                            <label asp-for="Localisation">Adresse</label>
                                            <span asp-validation-for="Localisation" class="text-danger small"></span>
                                        </div>
                                    </div>

                                    <div class="col-12">
                                        <div class="form-floating-custom">
                                            <textarea asp-for="Description" class="form-control" style="height: 120px" placeholder="Description"></textarea>
                                            <label asp-for="Description">Description de la coopérative</label>
                                            <span asp-validation-for="Description" class="text-danger small"></span>
                                        </div>
                                    </div>

                                    <!-- Hidden File Input triggered by Camera Icon -->
                                    <input type="file" id="logoUpload" name="logoFile" class="d-none" accept="image/*" onchange="previewImage(this)" />
                                    
                                    <div class="col-12 mt-4">
                                        <button type="submit" class="btn btn-save w-100">
                                            <span class="btn-text">Enregistrer les modifications</span>
                                            <i class="bi bi-check2-circle ms-2"></i>
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <style>
        /* Admin Profile Redesign specific styles */
        :root {
            --glass-bg: rgba(255, 255, 255, 0.7);
            --glass-border: rgba(255, 255, 255, 0.5);
            --glass-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.15);
        }

        .animate-float {
            animation: float 6s ease-in-out infinite;
        }
        
        @@keyframes float {
            0% { transform: translateY(0px) rotate(0deg); }
            50% { transform: translateY(-15px) rotate(1deg); }
            100% { transform: translateY(0px) rotate(0deg); }
        }

        .animate-slide-right {
            animation: slideInRight 0.8s cubic-bezier(0.2, 0.8, 0.2, 1);
        }

        @@keyframes slideInRight {
            from { opacity: 0; transform: translateX(50px); }
            to { opacity: 1; transform: translateX(0); }
        }
        
        /* CARD STYLES */
        .identity-card-wrapper {
            perspective: 1500px;
        }
        .identity-card {
            background: linear-gradient(135deg, #ffffff 0%, #f4f6f9 100%);
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 20px 50px rgba(0,0,0,0.15);
            border: 1px solid rgba(255,255,255,0.8);
            position: relative;
        }
        .card-header-band {
            height: 80px;
            background: linear-gradient(135deg, var(--majorelle) 0%, #4a6da3 100%);
            position: relative;
            display: flex;
            justify-content: space-between;
            padding: 1.5rem;
        }
        .chip {
            width: 50px; height: 35px;
            background: linear-gradient(135deg, #e0e0e0 0%, #d1d1d1 100%);
            border-radius: 6px; position: relative; border: 1px solid #bbb;
        }
        .chip::after {
            content: ''; position: absolute; top: 50%; left: 50%;
            transform: translate(-50%, -50%); width: 30px; height: 20px;
            border: 1px solid #999; border-radius: 4px;
        }
        .logo-mark {
            color: rgba(255,255,255,0.2); font-size: 3rem;
            position: absolute; right: 20px; top: -10px; transform: rotate(15deg);
        }
        .card-body-content {
            padding: 2rem; display: flex; flex-direction: column;
            align-items: center; text-align: center; margin-top: -40px;
        }
        .photo-zone {
            width: 120px; height: 120px; border-radius: 50%; background: white;
            padding: 5px; box-shadow: 0 8px 20px rgba(0,0,0,0.1);
            position: relative; margin-bottom: 1rem;
        }
        .coop-logo {
            width: 100%; height: 100%; border-radius: 50%; object-fit: cover;
            border: 3px solid #f0f0f0;
        }
        .coop-logo-placeholder {
            width: 100%; height: 100%; border-radius: 50%; display: flex;
            align-items: center; justify-content: center; background: #f8f9fa;
            color: #ccc; font-size: 2rem; border: 3px solid #f0f0f0;
        }
        .id-card-upload-btn {
            position: absolute; bottom: 0; right: 0;
            width: 35px; height: 35px; background: var(--terracotta);
            color: white; border-radius: 50%; display: flex;
            align-items: center; justify-content: center; cursor: pointer;
            box-shadow: 0 3px 10px rgba(0,0,0,0.2); border: 2px solid white;
            transition: all 0.2s;
        }
        .id-card-upload-btn:hover { transform: scale(1.1); }

        .coop-name {
            font-family: 'Playfair Display', serif; font-size: 1.5rem;
            color: #2c3e50; margin-bottom: 0.25rem;
        }
        .coop-location { color: #7f8c8d; font-size: 0.9rem; margin-bottom: 1rem; }
        .meta-info { border-top: 1px solid #eee; padding-top: 0.5rem; width: 100%; text-align: center; }
        .member-since { font-size: 0.8rem; color: #a0a0a0; text-transform: uppercase; letter-spacing: 1px; }

        .id-card-body {
            padding: 0 2rem 2rem;
        }
        .id-row {
            display: flex; justify-content: space-between; align-items: center;
            padding: 0.8rem 0; border-bottom: 1px dashed #eee;
        }
        .id-row:last-child { border-bottom: none; }
        .id-label { font-size: 0.7rem; color: #aaa; text-transform: uppercase; letter-spacing: 1px; font-weight: 600; }
        .id-value { font-size: 0.95rem; font-weight: 600; color: #333; }

        .id-card-footer {
            height: 50px; background: #f8f9fa; border-top: 1px solid #eee;
            display: flex; align-items: center; justify-content: space-between;
            padding: 0 1.5rem;
        }
        .hologram {
            width: 40px; height: 30px; background: linear-gradient(45deg, transparent 40%, rgba(255,255,255,0.8) 50%, transparent 60%);
            border-radius: 4px; border: 1px solid #ddd;
        }
        .barcode { font-size: 1.5rem; color: #333; }

        /* FORM STYLES */
        .glass-panel {
            background: rgba(255, 255, 255, 0.8);
            backdrop-filter: blur(15px);
            border-radius: 24px;
            border: 1px solid rgba(255, 255, 255, 0.6);
            box-shadow: 0 20px 40px rgba(0,0,0,0.05);
        }
        .icon-box {
            width: 45px; height: 45px; background: rgba(90, 126, 184, 0.1);
            color: var(--majorelle); border-radius: 12px;
            display: flex; align-items: center; justify-content: center; font-size: 1.2rem;
        }
        .section-title { font-family: 'Playfair Display', serif; font-weight: 700; color: #2c3e50; }
        
        .form-floating-custom { position: relative; }
        .form-floating-custom .form-control {
            height: 55px; padding: 1.25rem 1rem 0.5rem;
            border-radius: 12px; border: 2px solid rgba(0,0,0,0.05);
            background: rgba(255,255,255,0.7);
            font-size: 0.95rem; transition: all 0.3s;
        }
        .form-floating-custom textarea.form-control { height: auto; }
        .form-floating-custom label {
            position: absolute; top: 15px; left: 1rem;
            font-size: 0.9rem; color: #999;
            pointer-events: none; transition: all 0.2s;
        }
        .form-floating-custom .form-control:focus,
        .form-floating-custom .form-control:not(:placeholder-shown) {
            border-color: var(--majorelle);
            background: white; padding-top: 1.6rem; padding-bottom: 0.4rem;
        }
        .form-floating-custom .form-control:focus ~ label,
        .form-floating-custom .form-control:not(:placeholder-shown) ~ label {
            top: 5px; font-size: 0.75rem; color: var(--majorelle); font-weight: 600;
        }

        .btn-save {
            background: var(--terracotta); color: white;
            padding: 1rem; border-radius: 12px; border: none;
            font-weight: 600; letter-spacing: 0.5px;
            transition: all 0.3s;
            box-shadow: 0 10px 20px rgba(224, 122, 95, 0.2);
        }
        .btn-save:hover {
            transform: translateY(-2px);
            box-shadow: 0 15px 30px rgba(224, 122, 95, 0.3);
            background: #d66a55; color: white;
        }
    </style>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    var logoPreview = document.getElementById('cardLogoPreview');
                    if (logoPreview) {
                        logoPreview.src = e.target.result;
                    } else {
                        // If placeholder exists, replace it
                        var container = document.querySelector('.photo-zone');
                        container.innerHTML = `
                            <img src="${e.target.result}" alt="Logo" class="coop-logo" id="cardLogoPreview" />
                             <label for="logoUpload" class="id-card-upload-btn" title="Changer le logo">
                                <i class="bi bi-camera-fill"></i>
                            </label>
                        `;
                    }
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
</body>
</html>
