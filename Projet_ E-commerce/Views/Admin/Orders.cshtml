@model List<Projet__E_commerce.Models.OrderManagementViewModel>
@{
    Layout = null;
    ViewData["Title"] = "Gestion des Commandes";
    var currentFilter = ViewBag.CurrentFilter as string;
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin-animation.css" asp-append-version="true" />
    <style>
        .order-card {
            transition: all 0.3s ease;
            cursor: pointer;
            position: relative;
            overflow: hidden;
        }
        .order-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 4px;
            height: 100%;
            background: transparent;
            transition: background 0.3s ease;
        }
        .order-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }
        
        .order-card.status-en_attente::before { background: #ffc107; }
        .order-card.status-acceptée::before { background: #0dcaf0; }
        .order-card.status-en_cours::before { background: #0d6efd; }
        .order-card.status-livrée::before { background: #198754; }
        .order-card.status-annulée::before { background: #dc3545; }

        .client-avatar-small {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            background: var(--terracotta);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.8rem;
            font-weight: bold;
        }
    </style>
</head>
<body class="admin-bg">
    <div class="bg-orb-3"></div>
    
    <div class="d-flex">
        <!-- Sidebar -->
        <aside class="bg-white border-end vh-100 sticky-top d-none d-lg-block shadow-sm" style="width: 280px; z-index: 1000;">
            <div class="p-4 border-bottom">
                <a href="/" class="d-flex align-items-center gap-2 text-decoration-none">
                     <div class="rounded-3 bg-terracotta p-2 d-flex align-items-center justify-content-center shadow-sm" style="width: 40px; height: 40px;">
                        <i class="bi bi-flower1 text-white h5 mb-0"></i>
                    </div>
                    <div>
                        <h6 class="fw-bold mb-0 text-dark">CoopMaroc</h6>
                        <p class="small text-muted mb-0" style="font-size: 10px;">ESPACE ADMIN</p>
                    </div>
                </a>
            </div>
            
            <nav class="nav flex-column p-3 gap-1">
                <a class="nav-link text-muted rounded-3 d-flex align-items-center gap-3 py-2 px-3 mb-1 hover-effect" href="@Url.Action("Dashboard", "Admin")"><i class="bi bi-speedometer2"></i> Tableau de bord</a>
                <a class="nav-link text-muted rounded-3 d-flex align-items-center gap-3 py-2 px-3 mb-1 hover-effect" href="@Url.Action("Products", "Admin")"><i class="bi bi-box-seam"></i> Produits</a>
                <a class="nav-link active rounded-3 d-flex align-items-center gap-3 py-2 px-3 mb-1 shadow-sm" href="@Url.Action("Orders", "Admin")"><i class="bi bi-cart3"></i> Commandes</a>
                <a class="nav-link text-muted rounded-3 d-flex align-items-center gap-3 py-2 px-3 mb-1 hover-effect" href="@Url.Action("Profile", "Admin")"><i class="bi bi-gear"></i> Profil</a>
                <div class="mt-auto pt-4 border-top">
                    <a class="nav-link text-danger rounded-3 d-flex align-items-center gap-3 py-2 px-3 hover-effect" href="@Url.Action("Logout", "Account")">
                        <i class="bi bi-box-arrow-right"></i> Déconnexion
                    </a>
                </div>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="flex-grow-1 p-4 p-md-5">
            <header class="mb-5 animate-fade-down">
                <div class="d-flex justify-content-between align-items-end">
                    <div class="d-flex align-items-center gap-3">
                        <div class="bg-majorelle rounded-4 p-3 shadow-lg text-white" style="transform: rotate(-5deg);">
                            <i class="bi bi-bag-check-fill fs-3"></i>
                        </div>
                        <div>
                            <h1 class="font-display fw-bold mb-1 text-dark display-6">Commandes</h1>
                            <p class="text-muted mb-0">Suivez et gérez vos ventes en temps réel</p>
                        </div>
                    </div>
                    
                    <!-- Stats Quick View -->
                    <div class="d-none d-md-flex gap-4">
                        <div class="text-end">
                            <span class="d-block small text-muted text-uppercase fw-bold">Total</span>
                            <span class="fs-4 fw-bold">@Model.Count</span>
                        </div>
                        <div class="text-end border-start ps-4">
                            <span class="d-block small text-muted text-uppercase fw-bold">En Attente</span>
                            <span class="fs-4 fw-bold text-warning">@Model.Count(o => o.Statut == "en_attente")</span>
                        </div>
                         <div class="text-end border-start ps-4">
                            <span class="d-block small text-muted text-uppercase fw-bold">Revenus (Admin)</span>
                            <span class="fs-4 fw-bold text-success">@Model.Sum(o => o.PrixTotalAdmin).ToString("N0") <small class="fs-6 text-muted">MAD</small></span>
                        </div>
                    </div>
                </div>
            </header>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show border-0 shadow-sm rounded-4 mb-4 animate-fade-in-up" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show border-0 shadow-sm rounded-4 mb-4 animate-fade-in-up" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <!-- Modern Filter Bar -->
            <div class="d-flex flex-wrap gap-2 mb-4 animate-fade-in-up" style="animation-delay: 0.1s;">
                <a href="@Url.Action("Orders", "Admin")" class="btn rounded-pill px-4 py-2 @(string.IsNullOrEmpty(currentFilter) ? "btn-dark shadow-lg" : "btn-light shadow-sm bg-white text-muted hover-lift")">
                    Tous
                </a>
                <a href="@Url.Action("Orders", "Admin", new { statut = "en_attente" })" class="btn rounded-pill px-4 py-2 @(currentFilter == "en_attente" ? "btn-warning text-dark shadow-lg" : "btn-light shadow-sm bg-white text-muted hover-lift")">
                    <span class="badge bg-warning text-dark rounded-circle me-2">@Model.Count(o => o.Statut == "en_attente")</span>En attente
                </a>
                <a href="@Url.Action("Orders", "Admin", new { statut = "acceptée" })" class="btn rounded-pill px-4 py-2 @(currentFilter == "acceptée" ? "btn-info text-dark shadow-lg" : "btn-light shadow-sm bg-white text-muted hover-lift")">
                    <span class="badge bg-info text-dark rounded-circle me-2">@Model.Count(o => o.Statut == "acceptée")</span>Acceptées
                </a>
                <a href="@Url.Action("Orders", "Admin", new { statut = "livrée" })" class="btn rounded-pill px-4 py-2 @(currentFilter == "livrée" ? "btn-success text-white shadow-lg" : "btn-light shadow-sm bg-white text-muted hover-lift")">
                    Livrées
                </a>
                <a href="@Url.Action("Orders", "Admin", new { statut = "annulée" })" class="btn rounded-pill px-4 py-2 @(currentFilter == "annulée" ? "btn-danger text-white shadow-lg" : "btn-light shadow-sm bg-white text-muted hover-lift")">
                    Annulées
                </a>
            </div>

            <!-- Grid Layout for Orders -->
            <div class="row g-4">
                @if (Model.Any())
                {
                    @foreach (var order in Model)
                    {
                        <div class="col-md-6 col-xl-4 animate-fade-in-up">
                            <div class="card card-premium border-0 rounded-4 h-100 order-card status-@order.Statut" onclick="location.href='@Url.Action("OrderDetails", "Admin", new { id = order.IdCommande })'">
                                <div class="card-body p-4">
                                    <div class="d-flex justify-content-between align-items-start mb-4">
                                        <div>
                                            <span class="badge bg-light text-muted border mb-2">@order.NumeroCommande</span>
                                            <h5 class="fw-bold text-dark mb-0">@order.PrixTotalAdmin.ToString("N2") <small class="text-muted fs-6">MAD</small></h5>
                                        </div>
                                        <span class="badge @order.StatusClass rounded-pill px-3 py-2">
                                            @order.StatusLabel
                                        </span>
                                    </div>

                                    <div class="d-flex align-items-center gap-3 mb-4 p-3 rounded-3 bg-light bg-opacity-50">
                                        <div class="client-avatar-small shadow-sm">
                                            @order.NomClient.Substring(0,1).ToUpper()
                                        </div>
                                        <div class="overflow-hidden">
                                            <div class="text-truncate fw-bold text-dark">@order.NomClient @order.PrenomClient</div>
                                            <div class="small text-muted text-truncate">
                                                <i class="bi bi-clock me-1"></i>@order.CreatedAt.ToString("dd MMM, HH:mm")
                                            </div>
                                        </div>
                                    </div>

                                    <div class="d-flex align-items-center justify-content-between mt-auto pt-3 border-top border-light">
                                        <div class="d-flex align-items-center gap-2">
                                            @if(!string.IsNullOrEmpty(order.Thumbnail)) {
                                                <img src="@order.Thumbnail" class="rounded-circle border border-2 border-white shadow-sm" width="30" height="30" style="object-fit: cover;" alt="Prod" />
                                            }
                                            <span class="small text-muted">Voir détails</span>
                                        </div>
                                        <button class="btn btn-sm btn-white rounded-circle shadow-sm hover-scale text-primary" style="width: 32px; height: 32px;">
                                            <i class="bi bi-arrow-right"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12 text-center py-5 animate-fade-in-up">
                        <div class="d-inline-block p-5 rounded-circle bg-light bg-opacity-50 mb-3">
                            <i class="bi bi-inbox display-1 text-muted opacity-25"></i>
                        </div>
                        <h4 class="text-muted">Aucune commande trouvée</h4>
                        <p class="text-muted mb-4 opacity-75">Essayez de modifier les filtres pour voir plus de résultats.</p>
                        <a href="@Url.Action("Orders", "Admin")" class="btn btn-outline-dark rounded-pill px-4">Réinitialiser les filtres</a>
                    </div>
                }
            </div>

        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
