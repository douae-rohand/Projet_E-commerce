@model List<Projet__E_commerce.Models.OrderManagementViewModel>
@{
    Layout = null;
    ViewData["Title"] = "Gestion des Commandes";
    var currentFilter = ViewBag.CurrentFilter as string;
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin-animation.css" asp-append-version="true" />
</head>
<body class="admin-bg">
    <div class="bg-orb-3"></div>
    
    <div class="d-flex">
        <!-- Sidebar -->
        <aside class="bg-white border-end vh-100 sticky-top d-none d-lg-block shadow-sm" style="width: 280px; z-index: 1000;">
            <div class="p-4 border-bottom">
                <a href="/" class="d-flex align-items-center gap-2 text-decoration-none">
                     <div class="rounded-3 bg-terracotta p-2 d-flex align-items-center justify-content-center shadow-sm" style="width: 40px; height: 40px;">
                        <i class="bi bi-flower1 text-white h5 mb-0"></i>
                    </div>
                    <div>
                        <h6 class="fw-bold mb-0 text-dark">CoopMaroc</h6>
                        <p class="small text-muted mb-0" style="font-size: 10px;">ESPACE ADMIN</p>
                    </div>
                </a>
            </div>
            
            <nav class="nav flex-column p-3 gap-1">
                <a class="nav-link text-muted rounded-3 d-flex align-items-center gap-3 py-2 px-3 mb-1 hover-effect" href="@Url.Action("Dashboard", "Admin")"><i class="bi bi-speedometer2"></i> Tableau de bord</a>
                <a class="nav-link text-muted rounded-3 d-flex align-items-center gap-3 py-2 px-3 mb-1 hover-effect" href="@Url.Action("Products", "Admin")"><i class="bi bi-box-seam"></i> Produits</a>
                <a class="nav-link active rounded-3 d-flex align-items-center gap-3 py-2 px-3 mb-1 shadow-sm" href="@Url.Action("Orders", "Admin")"><i class="bi bi-cart3"></i> Commandes</a>
                <a class="nav-link text-muted rounded-3 d-flex align-items-center gap-3 py-2 px-3 mb-1 hover-effect" href="@Url.Action("Profile", "Admin")"><i class="bi bi-gear"></i> Profil</a>
                <div class="mt-auto pt-4 border-top">
                    <a class="nav-link text-danger rounded-3 d-flex align-items-center gap-3 py-2 px-3 hover-effect" href="@Url.Action("Logout", "Account")">
                        <i class="bi bi-box-arrow-right"></i> Déconnexion
                    </a>
                </div>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="flex-grow-1 p-4 p-md-5">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show border-0 shadow-sm rounded-4 mb-4 animate-fade-in-up" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show border-0 shadow-sm rounded-4 mb-4 animate-fade-in-up" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <header class="mb-5">
                <div class="d-flex align-items-center gap-3 mb-2">
                    <div class="bg-majorelle rounded-3 p-3 shadow-sm">
                        <i class="bi bi-cart3 text-white fs-4"></i>
                    </div>
                    <div>
                        <h1 class="font-display fw-bold mb-1 text-dark">Gestion des Commandes</h1>
                        <p class="text-muted mb-0 small">Visualisez et gérez les commandes contenant vos produits</p>
                    </div>
                </div>
            </header>

            <!-- Filter Buttons -->
            <div class="mb-4">
                <div class="btn-group shadow-sm rounded-pill overflow-hidden" role="group">
                    <a href="@Url.Action("Orders", "Admin")" class="btn @(string.IsNullOrEmpty(currentFilter) ? "btn-primary" : "btn-white text-dark border") px-4">
                        <i class="bi bi-list-ul me-2"></i>Toutes
                    </a>
                    <a href="@Url.Action("Orders", "Admin", new { statut = "en_attente" })" class="btn @(currentFilter == "en_attente" ? "btn-warning text-dark" : "btn-white text-dark border") px-4">
                        <i class="bi bi-clock me-2"></i>En attente
                    </a>
                    <a href="@Url.Action("Orders", "Admin", new { statut = "acceptée" })" class="btn @(currentFilter == "acceptée" ? "btn-info text-dark" : "btn-white text-dark border") px-4">
                        <i class="bi bi-check-circle me-2"></i>Acceptées
                    </a>
                    <a href="@Url.Action("Orders", "Admin", new { statut = "livrée" })" class="btn @(currentFilter == "livrée" ? "btn-success text-white" : "btn-white text-dark border") px-4">
                        <i class="bi bi-truck me-2"></i>Livrées
                    </a>
                    <a href="@Url.Action("Orders", "Admin", new { statut = "annulée" })" class="btn @(currentFilter == "annulée" ? "btn-danger text-white" : "btn-white text-dark border") px-4">
                        <i class="bi bi-x-circle me-2"></i>Annulées
                    </a>
                </div>
            </div>

            <!-- Orders Table -->
            <div class="card card-premium border-0 rounded-4 overflow-hidden shadow-sm">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead style="background: linear-gradient(135deg, rgba(90, 126, 184, 0.05), rgba(157, 209, 230, 0.05));">
                            <tr class="small text-uppercase fw-bold border-0" style="color: var(--majorelle);">
                                <th class="border-0 px-4 py-3">N° Commande</th>
                                <th class="border-0 px-4 py-3">Client</th>
                                <th class="border-0 px-4 py-3">Date</th>
                                <th class="border-0 px-4 py-3 text-center">Statut</th>
                                <th class="border-0 px-4 py-3 text-end">Total (coop)</th>
                                <th class="border-0 px-4 py-3 text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Any())
                            {
                                @foreach (var order in Model)
                                {
                                    <tr class="animate-fade-in-up">
                                        <td class="px-4 py-3">
                                            <div class="order-number">
                                                <i class="bi bi-receipt"></i>
                                                <span>@order.NumeroCommande</span>
                                            </div>
                                        </td>
                                        <td class="px-4 py-3">
                                            <div class="d-flex align-items-center gap-2">
                                                <div class="bg-blush rounded-circle p-2" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                                                    <i class="bi bi-person-fill text-terracotta"></i>
                                                </div>
                                                <div>
                                                    <h6 class="fw-bold mb-0 text-dark">@order.NomClient</h6>
                                                    @if (!string.IsNullOrEmpty(order.TelephoneClient))
                                                    {
                                                        <p class="small text-muted mb-0"><i class="bi bi-telephone me-1"></i>@order.TelephoneClient</p>
                                                    }
                                                </div>
                                            </div>
                                        </td>
                                        <td class="px-4 py-3">
                                            <div class="d-flex align-items-center gap-2">
                                                <i class="bi bi-calendar3 text-muted"></i>
                                                <span class="small text-muted">@order.CreatedAt.ToString("dd/MM/yyyy")</span>
                                            </div>
                                            <div class="small text-muted">@order.CreatedAt.ToString("HH:mm")</div>
                                        </td>
                                        <td class="px-4 py-3 text-center">
                                            <span class="badge @order.StatusClass px-3 py-2 rounded-pill">
                                                @order.StatusLabel
                                            </span>
                                        </td>
                                        <td class="px-4 py-3 text-end">
                                            <div class="price-tag">@order.PrixTotalAdmin.ToString("N2") MAD</div>
                                        </td>
                                        <td class="px-4 py-3 text-end">
                                            <a href="@Url.Action("OrderDetails", "Admin", new { id = order.IdCommande })" 
                                               class="btn btn-sm btn-majorelle text-white rounded-pill px-3 hover-lift" 
                                               title="Voir détails">
                                                <i class="bi bi-eye-fill me-1"></i>Détails
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6" class="text-center py-5">
                                        <div class="py-5">
                                            <div class="bg-blush rounded-circle p-4 d-inline-flex mb-3">
                                                <i class="bi bi-cart3 display-4 text-terracotta"></i>
                                            </div>
                                            <h5 class="text-muted mb-2">Aucune commande trouvée</h5>
                                            <p class="text-muted small">Les commandes contenant vos produits apparaîtront ici</p>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
