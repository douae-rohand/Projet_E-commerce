@model Projet__E_commerce.Models.ProductManagementViewModel
@{
    Layout = null;
    ViewData["Title"] = "Détails produit - " + Model.NomP;
    var cover = Model.Variantes.FirstOrDefault(v => !string.IsNullOrEmpty(v.photo))?.photo ?? Model.Photo;
    var stockStatus = Model.StockTotal == 0 ? "Rupture" : (Model.StockTotal <= Model.SeuilAlerte ? "Stock faible" : "En stock");
    var stockClass = Model.StockTotal == 0 ? "bg-danger text-white" : (Model.StockTotal <= Model.SeuilAlerte ? "bg-warning-subtle text-warning" : "bg-success-subtle text-success");
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin-animation.css" asp-append-version="true" />
</head>
<body class="admin-bg">
    <div class="bg-orb-3"></div>

    <div class="d-flex">
        <!-- Sidebar -->
        <aside class="bg-white border-end vh-100 sticky-top d-none d-lg-block shadow-sm" style="width: 280px; z-index: 1000;">
            <div class="p-4 border-bottom">
                <a href="/" class="d-flex align-items-center gap-2 text-decoration-none">
                    <div class="rounded-3 bg-terracotta p-2 d-flex align-items-center justify-content-center shadow-sm" style="width: 40px; height: 40px;">
                        <i class="bi bi-flower1 text-white h5 mb-0"></i>
                    </div>
                    <div>
                        <h6 class="fw-bold mb-0 text-dark">CoopMaroc</h6>
                        <p class="small text-muted mb-0" style="font-size: 10px;">ESPACE ADMIN</p>
                    </div>
                </a>
            </div>
            
            <nav class="nav flex-column p-3 gap-1">
                <a class="nav-link text-muted rounded-3 d-flex align-items-center gap-3 py-2 px-3 mb-1 hover-effect" href="@Url.Action("Dashboard", "Admin")"><i class="bi bi-speedometer2"></i> Tableau de bord</a>
                <a class="nav-link active rounded-3 d-flex align-items-center gap-3 py-2 px-3 mb-1 shadow-sm" href="@Url.Action("Products", "Admin")"><i class="bi bi-box-seam"></i> Produits</a>
                <a class="nav-link text-muted rounded-3 d-flex align-items-center gap-3 py-2 px-3 mb-1 hover-effect" href="@Url.Action("Orders", "Admin")"><i class="bi bi-cart3"></i> Commandes</a>
                <a class="nav-link text-muted rounded-3 d-flex align-items-center gap-3 py-2 px-3 mb-1 hover-effect" href="@Url.Action("Profile", "Admin")"><i class="bi bi-gear"></i> Profil</a>
                <div class="mt-auto pt-4 border-top">
                    <a class="nav-link text-danger rounded-3 d-flex align-items-center gap-3 py-2 px-3 hover-effect" href="@Url.Action("Logout", "Account")">
                        <i class="bi bi-box-arrow-right"></i> Déconnexion
                    </a>
                </div>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="flex-grow-1 p-4 p-md-5">
            <header class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-1">
                            <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "Admin")" class="text-decoration-none text-muted">Tableau de bord</a></li>
                            <li class="breadcrumb-item"><a href="@Url.Action("Products", "Admin")" class="text-decoration-none text-muted">Produits</a></li>
                            <li class="breadcrumb-item active" aria-current="page">@Model.NomP</li>
                        </ol>
                    </nav>
                    <h1 class="font-display fw-bold mb-0 text-dark">Détails du produit</h1>
                </div>
                <div class="d-flex gap-2">
                    <a href="@Url.Action("EditProduct", "Admin", new { id = Model.IdP })" class="btn btn-primary rounded-pill shadow-sm hover-lift">
                        <i class="bi bi-pencil-square me-1"></i>Modifier
                    </a>
                    <a href="@Url.Action("Products", "Admin")" class="btn btn-light rounded-pill shadow-sm hover-lift">
                        <i class="bi bi-arrow-left me-1"></i>Retour
                    </a>
                </div>
            </header>

            <div class="row g-4">
                <div class="col-lg-6">
                    <div class="card card-premium border-0 rounded-4 overflow-hidden h-100">
                        @if (!string.IsNullOrEmpty(cover))
                        {
                            <div class="position-relative">
                                <img src="@cover" alt="@Model.NomP" class="img-fluid w-100" style="max-height: 320px; object-fit: cover;" />
                                <span class="badge @stockClass position-absolute top-0 end-0 m-3 rounded-pill px-3">@stockStatus</span>
                                <span class="badge @(Model.Statut == "active" ? "bg-success-subtle text-success" : "bg-secondary-subtle text-secondary") position-absolute bottom-0 end-0 m-3 rounded-pill px-3">
                                    @(Model.Statut == "active" ? "Actif" : "Inactif")
                                </span>
                            </div>
                        }
                        else
                        {
                            <div class="bg-light d-flex align-items-center justify-content-center" style="height: 320px;">
                                <div class="text-center text-muted">
                                    <i class="bi bi-image display-5 d-block mb-2"></i>
                                    <span>Aucune image</span>
                                </div>
                            </div>
                        }
                        <div class="card-body">
                            <h3 class="fw-bold text-dark mb-2">@Model.NomP</h3>
                            <div class="d-flex flex-wrap gap-2 mb-3">
                                <span class="badge bg-light text-dark border"><i class="bi bi-tag me-1"></i>@Model.NomCategorie</span>
                                <span class="badge bg-light text-dark border">Seuil alerte : @Model.SeuilAlerte</span>
                                <span class="badge bg-light text-dark border">Stock : @Model.StockTotal</span>
                                @if (Model.PrixMin.HasValue)
                                {
                                    <span class="badge bg-primary-subtle text-primary border">de @Model.PrixMin.Value.ToString("N2") à @Model.PrixMax?.ToString("N2") MAD</span>
                                }
                            </div>
                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                <p class="text-muted mb-0">@Model.Description</p>
                            }
                            else
                            {
                                <p class="text-muted fst-italic mb-0">Aucune description fournie.</p>
                            }
                        </div>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="card card-premium border-0 rounded-4 h-100">
                        <div class="card-body">
                            <h5 class="fw-bold text-dark mb-3">Infos rapides</h5>
                            <div class="row g-3">
                                <div class="col-sm-6">
                                    <div class="p-3 rounded-3 bg-light h-100">
                                        <div class="small text-muted mb-1">Statut</div>
                                        <div class="fw-bold">@Model.Statut</div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="p-3 rounded-3 bg-light h-100">
                                        <div class="small text-muted mb-1">Stock total</div>
                                        <div class="fw-bold">@Model.StockTotal</div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="p-3 rounded-3 bg-light h-100">
                                        <div class="small text-muted mb-1">Prix min</div>
                                        <div class="fw-bold">@Model.PrixMin?.ToString("N2") ?? "-"</div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="p-3 rounded-3 bg-light h-100">
                                        <div class="small text-muted mb-1">Prix max</div>
                                        <div class="fw-bold">@Model.PrixMax?.ToString("N2") ?? "-"</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card card-premium border-0 rounded-4 p-4 mt-4">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="fw-bold mb-0">Variantes</h5>
                    <span class="badge bg-light text-dark border">@Model.Variantes.Count variantes</span>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light">
                            <tr class="small text-muted text-uppercase fw-bold border-0">
                                <th class="border-0 ps-3">Photo</th>
                                <th class="border-0">Prix</th>
                                <th class="border-0">Taille</th>
                                <th class="border-0">Couleur</th>
                                <th class="border-0">Quantité</th>
                                <th class="border-0">Poids</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Variantes.Any())
                            {
                                @foreach (var v in Model.Variantes)
                                {
                                    <tr>
                                        <td class="ps-3">
                                            @if (!string.IsNullOrEmpty(v.photo))
                                            {
                                                <img src="@v.photo" alt="Variante" class="rounded" style="width:48px; height:48px; object-fit:cover;" />
                                            }
                                            else
                                            {
                                                <span class="text-muted small">-</span>
                                            }
                                        </td>
                                        <td class="fw-bold text-primary">@v.prix.ToString("N2") <small>MAD</small></td>
                                        <td>@(string.IsNullOrEmpty(v.taille) ? "-" : v.taille)</td>
                                        <td>
                                            @if(!string.IsNullOrEmpty(v.couleur)) {
                                                <span class="d-inline-block rounded-circle border" style="width: 12px; height: 12px; background-color: @v.couleur;" title="@v.couleur"></span>
                                                <span class="small ms-1">@v.couleur</span>
                                            } else {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            @if (v.quantite == 0)
                                            {
                                                <span class="badge bg-danger text-white rounded-pill">0</span>
                                            }
                                            else if (v.quantite <= Model.SeuilAlerte)
                                            {
                                                <span class="badge bg-warning-subtle text-warning rounded-pill">
                                                    <i class="bi bi-exclamation-circle me-1"></i>@v.quantite
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="fw-medium">@v.quantite</span>
                                            }
                                        </td>
                                        <td class="text-muted">@(!string.IsNullOrEmpty(v.poids) ? v.poids : "-")</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6" class="text-center text-muted py-4">Aucune variante pour le moment.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
