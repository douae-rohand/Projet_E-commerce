@{
    ViewData["Title"] = "Login";
}

@section Styles {
    <style>
        :root {
            --primary-color: #d97706;
            --secondary-color: #92400e;
            --dark-color: #1f2937;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .login-container {
            min-height: 100vh;
        }

        .left-section {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f8f9fa;
            padding: 2rem;
        }

        .right-section {
            min-height: 100vh;
            position: relative;
            overflow: hidden;
        }

        .right-section::before {
            content: '';
            position: absolute;
            inset: 0;
            background: linear-gradient(135deg, rgba(217, 119, 6, 0.9), rgba(146, 64, 14, 0.9));
            z-index: 1;
        }

        .right-section img {
            position: absolute;
            inset: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            mix-blend-mode: overlay;
        }

        .right-section .content {
            position: relative;
            z-index: 2;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            padding: 3rem;
            text-align: center;
        }

        .logo-box {
            width: 48px;
            height: 48px;
            background-color: var(--primary-color);
            border-radius: 12px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.5rem;
            font-weight: bold;
            text-decoration: none;
            margin-bottom: 2rem;
        }

        .form-container {
            max-width: 400px;
            width: 100%;
        }

        .form-control {
            height: 48px;
            padding-left: 2.75rem;
            border: 1px solid #dee2e6;
        }

        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.2rem rgba(217, 119, 6, 0.25);
        }

        .input-icon {
            position: absolute;
            left: 0.75rem;
            top: 50%;
            transform: translateY(-50%);
            color: #6c757d;
            z-index: 10;
        }

        .password-toggle {
            position: absolute;
            right: 0.75rem;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: #6c757d;
            cursor: pointer;
            z-index: 10;
        }

        .password-toggle:hover {
            color: var(--dark-color);
        }

        .btn-primary {
            height: 48px;
            background-color: var(--primary-color);
            border: none;
            font-weight: 500;
        }

        .btn-primary:hover {
            background-color: var(--secondary-color);
        }

        .btn-outline-secondary {
            height: 44px;
        }

        .social-btn svg {
            width: 20px;
            height: 20px;
            margin-right: 0.5rem;
        }

        .divider {
            position: relative;
            text-align: center;
            margin: 2rem 0;
        }

        .divider::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 0;
            right: 0;
            height: 1px;
            background-color: #dee2e6;
        }

        .divider span {
            position: relative;
            background-color: #f8f9fa;
            padding: 0 1rem;
            color: #6c757d;
            font-size: 0.75rem;
            text-transform: uppercase;
        }

        a {
            color: var(--primary-color);
            text-decoration: none;
        }

        a:hover {
            text-decoration: underline;
        }
    </style>
}

<div class="container-fluid p-0 login-container">
    <div class="row g-0">
        <!-- Left Section - Form -->
        <div class="col-lg-6 left-section">
            <div class="form-container">
                <div class="text-center mb-4">
                    <a asp-controller="Home" asp-action="Index" class="logo-box">S</a>
                    <h1 class="h3 fw-bold mb-2">Bon retour !</h1>
                    <p class="text-muted">Connectez-vous à votre compte</p>
                </div>

                <form asp-controller="Account" asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- Email Field -->
                    <div class="mb-3">
                        <label for="Email" class="form-label fw-medium">Email</label>
                        <div class="position-relative">
                            <i class="bi bi-envelope input-icon"></i>
                            <input type="email" class="form-control" id="Email" name="Email"
                                   placeholder="votre@email.com" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Password Field -->
                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-2">
                            <label for="Password" class="form-label fw-medium">Mot de passe</label>
                            <a asp-controller="Account" asp-action="ForgotPassword" class="small">Mot de passe oublié ?</a>
                        </div>
                        <div class="position-relative">
                            <i class="bi bi-lock input-icon"></i>
                            <input type="password" class="form-control" id="Password" name="Password"
                                   placeholder="••••••••" required />
                            <button type="button" class="password-toggle" onclick="togglePassword()">
                                <i class="bi bi-eye" id="eyeIcon"></i>
                            </button>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Remember Me -->
                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="RememberMe" name="RememberMe" />
                        <label class="form-check-label" for="RememberMe">Se souvenir de moi</label>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-primary w-100 mb-3">Se connecter</button>

                    <!-- Social Login Divider -->
                    <div class="divider">
                        <span>Ou continuer avec</span>
                    </div>

                    <!-- Social Buttons -->
                    <div class="row g-2 mb-4">
                        <div class="col-6">
                            <button type="button" class="btn btn-outline-secondary w-100 social-btn">
                                <svg viewBox="0 0 24 24">
                                    <path fill="currentColor" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" />
                                    <path fill="currentColor" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" />
                                    <path fill="currentColor" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" />
                                    <path fill="currentColor" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" />
                                </svg>
                                Google
                            </button>
                        </div>
                        <div class="col-6">
                            <button type="button" class="btn btn-outline-secondary w-100 social-btn">
                                <svg fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z" />
                                </svg>
                                Facebook
                            </button>
                        </div>
                    </div>

                    <!-- Register Link -->
                    <p class="text-center text-muted small mb-0">
                        Pas encore de compte ?
                        <a asp-controller="Account" asp-action="Register" class="fw-medium">S'inscrire</a>
                    </p>
                </form>
            </div>
        </div>

        <!-- Right Section - Image -->
        <div class="col-lg-6 right-section d-none d-lg-block">
            <img src="https://images.unsplash.com/photo-1590736969955-71cc94901144?w=1200&h=1600&fit=crop"
                 alt="Artisanat marocain">
            <div class="content">
                <div>
                    <h2 class="display-5 fw-bold mb-3">Bienvenue sur SoukDigital</h2>
                    <p class="fs-5">Découvrez l'artisanat marocain authentique et faites vos achats en toute sérénité.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function togglePassword() {
            var passwordField = document.getElementById('Password');
            var eyeIcon = document.getElementById('eyeIcon');

            if (passwordField.type === 'password') {
                passwordField.type = 'text';
                eyeIcon.classList.remove('bi-eye');
                eyeIcon.classList.add('bi-eye-slash');
            } else {
                passwordField.type = 'password';
                eyeIcon.classList.remove('bi-eye-slash');
                eyeIcon.classList.add('bi-eye');
            }
        }
    </script>
}