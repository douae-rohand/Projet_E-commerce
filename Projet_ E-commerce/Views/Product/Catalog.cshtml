@model IReadOnlyList<ProductViewModel>
@{
    ViewData["Title"] = "Catalogue - Artisanat Marocain";

    var categories = ViewBag.Categories as List<Categorie> ?? new List<Categorie>();
    int? selectedCategory = ViewBag.SelectedCategory as int?;
}

<!-- Breadcrumb -->
<div class="bg-light py-3 border-bottom">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 small">
                <li class="breadcrumb-item"><a href="/" class="text-decoration-none text-muted">Accueil</a></li>
                <li class="breadcrumb-item active" aria-current="page">Catalogue</li>
            </ol>
        </nav>
    </div>
</div>

<div class="container py-5">
    <div class="row g-4">
        <!-- Sidebar Filters -->
        <aside class="col-lg-3 d-none d-lg-block">
            <form asp-controller="Catalog" asp-action="Index" method="get" id="filterForm">
                <div class="sticky-top" style="top: 100px;">
                    <button type="submit" class="btn btn-dark w-100 mb-4 rounded-pill">Appliquer les filtres</button>
                    
                    <div class="mb-5">
                        <h5 class="font-display fw-bold mb-4">Catégories</h5>
                        <div class="list-group list-group-flush">
                            <label class="list-group-item border-0 px-0 d-flex align-items-center gap-3 bg-transparent cursor-pointer group">
                                <input class="form-check-input mt-0 border-majorelle" type="radio" name="category" value="" @(!selectedCategory.HasValue ? "checked" : "") onchange="this.form.submit()">
                                <span class="small text-muted group-hover-dark">Toutes les catégories</span>
                            </label>
                            @foreach (var cat in categories) {
                                <label class="list-group-item border-0 px-0 d-flex align-items-center gap-3 bg-transparent cursor-pointer group">
                                    <input class="form-check-input mt-0 border-majorelle" type="radio" name="category" value="@cat.idC" @(selectedCategory == cat.idC ? "checked" : "") onchange="this.form.submit()">
                                    <span class="small text-muted group-hover-dark">@cat.nom</span>
                                </label>
                            }
                        </div>
                    </div>

                    <div class="mb-5 border-top pt-4">
                        <h5 class="font-display fw-bold mb-4">Prix</h5>
                        <div class="list-group list-group-flush">
                            @{
                                var prices = new Dictionary<string, string> {
                                    { "0-200", "0 - 200 MAD" },
                                    { "200-500", "200 - 500 MAD" },
                                    { "500-1000", "500 - 1000 MAD" },
                                    { "1000+", "1000+ MAD" }
                                };
                            }
                            @foreach (var price in prices) {
                                <label class="list-group-item border-0 px-0 d-flex align-items-center gap-3 bg-transparent cursor-pointer group">
                                    <input class="form-check-input mt-0 border-majorelle" type="radio" name="priceRange" value="@price.Key">
                                    <span class="small text-muted group-hover-dark">@price.Value</span>
                                </label>
                            }
                        </div>
                    </div>

                    <div class="mb-5 border-top pt-4">
                        <h5 class="font-display fw-bold mb-4">Disponibilité</h5>
                        <div class="list-group list-group-flush">
                            <label class="list-group-item border-0 px-0 d-flex align-items-center gap-3 bg-transparent cursor-pointer group">
                                <input class="form-check-input mt-0 border-majorelle" type="checkbox" name="inStock" value="true">
                                <span class="small text-muted group-hover-dark">En stock</span>
                            </label>
                            <label class="list-group-item border-0 px-0 d-flex align-items-center gap-3 bg-transparent cursor-pointer group">
                                <input class="form-check-input mt-0 border-majorelle" type="checkbox" name="isPromo" value="true">
                                <span class="small text-muted group-hover-dark">Promo</span>
                            </label>
                            <label class="list-group-item border-0 px-0 d-flex align-items-center gap-3 bg-transparent cursor-pointer group">
                                <input class="form-check-input mt-0 border-majorelle" type="checkbox" name="isNew" value="true">
                                <span class="small text-muted group-hover-dark">Nouveautés</span>
                            </label>
                        </div>
                    </div>
                </div>
            </form>
        </aside>

        <!-- Main Content -->
        <div class="col-lg-9">
            <!-- Toolbar -->
            <div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center gap-3 mb-4">
                <div class="d-flex align-items-center gap-3">
                    <button class="btn btn-outline-dark d-lg-none py-2 px-3" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasFilters">
                        <i class="bi bi-sliders me-2"></i> Filtres
                    </button>
                    <p class="text-muted small mb-0"><span class="fw-bold text-dark">@Model.Count</span> produits trouvés</p>
                </div>

                <div class="d-flex align-items-center gap-3">
                    <div class="btn-group btn-group-sm rounded-3 overflow-hidden border">
                        <button class="btn btn-light active py-2 px-3"><i class="bi bi-grid-3x3-gap-fill"></i></button>
                        <button class="btn btn-light py-2 px-3"><i class="bi bi-list-ul"></i></button>
                    </div>

                    <select class="form-select form-select-sm border-0 bg-light-subtle rounded-3 py-2 px-3 fw-medium" style="width: 160px;">
                        <option value="popular">Populaire</option>
                        <option value="newest">Nouveautés</option>
                        <option value="price-asc">Prix croissant</option>
                        <option value="price-desc">Prix décroissant</option>
                    </select>
                </div>
            </div>

            <div class="row g-4 overflow-hidden">
                @if (Model.Any())
                {
                    @foreach (var prod in Model) {
                        <div class="col-6 col-md-4">
                            <!-- Helper for Product Card to ensure correct link -->
                            <div class="card h-100 border-0 shadow-sm-hover transition-all">
                                <div class="position-relative overflow-hidden">
                                     @if(prod.IsNew) {
                                        <span class="badge bg-white text-dark position-absolute top-0 start-0 m-3 rounded-pill px-3 py-2 small shadow-sm z-2">Nouveau</span>
                                    }
                                    <a asp-controller="Catalog" asp-action="Detail" asp-route-id="@prod.Id" class="d-block overflow-hidden ratio ratio-1x1 bg-light">
                                        <img src="@prod.Image" class="object-fit-cover w-100 h-100 transition-transform" alt="@prod.Name">
                                    </a>
                                </div>
                                <div class="card-body pt-4">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <span class="text-terracotta fw-bold small text-uppercase">@prod.Category</span>
                                        <div class="d-flex small text-warning gap-1">
                                            <i class="bi bi-star-fill"></i>
                                            <span class="text-muted">(@prod.Reviews)</span>
                                        </div>
                                    </div>
                                    <h5 class="card-title font-display fw-bold mb-3">
                                        <a asp-controller="Catalog" asp-action="Detail" asp-route-id="@prod.Id" class="text-reset text-decoration-none stretched-link">@prod.Name</a>
                                    </h5>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="h5 fw-bold mb-0">@prod.Price MAD</span>
                                        <button class="btn btn-light rounded-circle p-2 shadow-sm text-primary">
                                            <i class="bi bi-cart-plus"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12 text-center py-5">
                        <div class="mb-4">
                            <i class="bi bi-search display-1 text-muted opacity-25"></i>
                        </div>
                        <h3>Aucun produit trouvé</h3>
                        <p class="text-muted">Essayez de modifier vos filtres.</p>
                        <a href="@Url.Action("Index")" class="btn btn-outline-dark rounded-pill mt-3 px-4">Voir tout le catalogue</a>
                    </div>
                }
            </div>

            <!-- Pagination (Static for now) -->
            @if(Model.Count > 12) {
                <nav class="mt-5 pt-4">
                    <ul class="pagination justify-content-center gap-2">
                        <li class="page-item disabled"><a class="page-link rounded-circle border-0 bg-light" href="#"><i class="bi bi-chevron-left"></i></a></li>
                        <li class="page-item active"><a class="page-link rounded-circle border-0 shadow-soft" href="#">1</a></li>
                        <li class="page-item"><a class="page-link rounded-circle border-0 bg-light text-dark" href="#">2</a></li>
                        <li class="page-item"><a class="page-link rounded-circle border-0 bg-light text-dark" href="#"><i class="bi bi-chevron-right"></i></a></li>
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>

<!-- Mobile Filters Offcanvas -->
<div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasFilters">
    <div class="offcanvas-header border-bottom">
        <h5 class="offcanvas-title font-display fw-bold">Filtres</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body p-4">
        <form asp-controller="Catalog" asp-action="Index" method="get">
            <h6 class="fw-bold mb-3">Catégories</h6>
            <div class="mb-4">
                @foreach (var cat in categories) {
                    <label class="d-flex align-items-center gap-3 mb-2 cursor-pointer">
                        <input class="form-check-input mt-0 border-majorelle" type="radio" name="category" value="@cat.idC" @(selectedCategory == cat.idC ? "checked" : "")>
                        <span class="small text-muted text-decoration-none">@cat.nom</span>
                    </label>
                }
            </div>
            
            <button type="submit" class="btn btn-primary w-100 py-3 rounded-pill fw-bold mt-4">Appliquer</button>
        </form>
    </div>
</div>

<style>
    .group-hover-dark:hover { color: #000 !important; }
    .page-link { width: 40px; height: 40px; display: flex; align-items: center; justify-content: center; }
    .bg-primary-subtle { background-color: rgba(90, 126, 184, 0.1) !important; }
    .border-primary-subtle { border-color: rgba(90, 126, 184, 0.2) !important; }
</style>


