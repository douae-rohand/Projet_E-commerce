@model Projet__E_commerce.Models.ViewModels.SuperAdminDashboardViewModel

<header class="d-flex justify-content-between align-items-center mb-5 pb-4 border-bottom">
    <h1 class="font-display fw-bold h3 mb-0">Tableau de bord Plateforme</h1>
    <div class="d-flex align-items-center gap-3">
        <div class="text-end d-none d-sm-block">
            <h6 class="fw-bold mb-0">@Model.UserEmail</h6> <!-- CHANGED: bind from DB-backed model -->
            <p class="small text-muted mb-0">Super Administrateur</p>
        </div>
        <div class="rounded-circle bg-terracotta d-flex align-items-center justify-content-center text-white shadow-soft" style="width: 44px; height: 44px;">
            <i class="bi bi-person-check h5 mb-0"></i>
        </div>
    </div>
</header>


<div class="row g-4 mb-5">
    <div class="col-xl-4 col-lg-6">
        <div class="card border-0 shadow-soft rounded-4 p-4 h-100">
            <h5 class="fw-bold mb-3">Utilisateurs: Actifs vs Inactifs</h5>
            <canvas id="usersDoughnut" style="max-height:260px"></canvas>
        </div>
    </div>
    <div class="col-xl-4 col-lg-6">
        <div class="card border-0 shadow-soft rounded-4 p-4 h-100">
            <h5 class="fw-bold mb-3">Coopératives: Actives vs Inactives</h5>
            <canvas id="coopsDoughnut" style="max-height:260px"></canvas>
        </div>
    </div>
    <div class="col-xl-4">
        <div class="card border-0 shadow-soft rounded-4 p-4 h-100">
            <h5 class="fw-bold mb-3">État du Stock Produits</h5>
            <canvas id="stockDoughnut" style="max-height:260px"></canvas>
        </div>
    </div>
</div>

<div class="row g-4 mb-5">
    <!-- Monthly Revenue Chart -->
    <div class="col-lg-8">
        <div class="card border-0 shadow-soft rounded-4 p-4 h-100">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h5 class="fw-bold mb-0">Évolution des Revenus</h5>
                <div class="text-success small fw-bold">Derniers 6 mois</div>
            </div>
            <canvas id="monthlyRevenueChart" style="max-height: 300px;"></canvas>
        </div>
    </div>

    <!-- Category Sales -->
    <div class="col-lg-4">
        <div class="card border-0 shadow-soft rounded-4 p-4 h-100">
            <h5 class="fw-bold mb-4">Ventes par Catégorie</h5>
            @if (Model.CategorySales.Any())
            {
                <div class="d-flex flex-column gap-3">
                    @foreach (var category in Model.CategorySales.Take(5))
                    {
                        var totalRevenue = Model.CategorySales.Sum(c => c.Revenue);
                        var percentage = totalRevenue > 0 ? (int)((category.Revenue / totalRevenue) * 100) : 0;
                        
                        <div>
                            <div class="d-flex justify-content-between mb-2">
                                <span class="fw-semibold text-capitalize small">@category.CategoryName</span>
                                <span class="text-muted small">@percentage%</span>
                            </div>
                            <div class="progress rounded-pill" style="height: 6px;">
                                <div class="progress-bar bg-terracotta transition-base" style="width: @percentage%"></div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5 text-muted small">Aucune donnée de catégorie</div>
            }
        </div>
    </div>
</div>


<div class="row g-4 mb-5">
    <div class="col-sm-6 col-xl-3">
        <div class="card border-0 shadow-soft rounded-4 p-4 h-100">
            <div class="d-flex align-items-center gap-4">
                <div class="bg-primary text-white rounded-3 shadow-soft d-flex align-items-center justify-content-center" style="width: 52px; height: 52px;">
                    <i class="bi bi-shop h4 mb-0"></i>
                </div>
                <div>
                    <p class="text-muted small fw-bold text-uppercase mb-1">Coopératives actives</p>
                    <h3 class="fw-bold mb-0">@Model.TotalCooperativesActives / @Model.TotalCooperatives</h3>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-xl-3">
        <div class="card border-0 shadow-soft rounded-4 p-4 h-100">
            <div class="d-flex align-items-center gap-4">
                <div class="bg-terracotta text-white rounded-3 shadow-soft d-flex align-items-center justify-content-center" style="width: 52px; height: 52px;">
                    <i class="bi bi-people h4 mb-0"></i>
                </div>
                <div>
                    <p class="text-muted small fw-bold text-uppercase mb-1">Utilisateurs actifs</p>
                    <h3 class="fw-bold mb-0">@Model.TotalUsersActifs / @Model.TotalUsers</h3>
                    <small class="text-muted">@Model.TotalClients clients</small>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-xl-3">
        <div class="card border-0 shadow-soft rounded-4 p-4 h-100">
            <div class="d-flex align-items-center gap-4">
                <div class="bg-info text-white rounded-3 shadow-soft d-flex align-items-center justify-content-center" style="width: 52px; height: 52px;">
                    <i class="bi bi-box h4 mb-0"></i>
                </div>
                <div>
                    <p class="text-muted small fw-bold text-uppercase mb-1">Produits en stock</p>
                    <h3 class="fw-bold mb-0">@Model.ProduitsEnStock / @Model.TotalProduits</h3>
                    @if (Model.ProduitsStockFaible > 0 || Model.ProduitsRupture > 0)
                    {
                        <small class="text-warning">@Model.ProduitsStockFaible faible</small>
                        <small class="text-danger">@Model.ProduitsRupture rupture</small>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-xl-3">
        <div class="card border-0 shadow-soft rounded-4 p-4 h-100">
            <div class="d-flex align-items-center gap-4">
                <div class="bg-warning text-white rounded-3 shadow-soft d-flex align-items-center justify-content-center" style="width: 52px; height: 52px;">
                    <i class="bi bi-currency-dollar h4 mb-0"></i>
                </div>
                <div>
                    <p class="text-muted small fw-bold text-uppercase mb-1">Panier Moyen</p>
                    <h3 class="fw-bold mb-0">@Model.AverageOrderValue.ToString("N0") MAD</h3>
                    <small class="text-muted">Sur @Model.TotalOrders commandes</small>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Top Cities and Additional Stats -->
<div class="row g-4 mb-5">
    <div class="col-lg-6">
        <div class="card border-0 shadow-soft rounded-4 p-4 h-100">
            <h5 class="fw-bold mb-4">Ventes par Ville (Top 5)</h5>
            @if (Model.TopCities.Any())
            {
                <div class="table-responsive">
                    <table class="table table-borderless align-middle mb-0">
                        <thead class="text-muted small text-uppercase">
                            <tr>
                                <th>Ville</th>
                                <th class="text-center">Commandes</th>
                                <th class="text-end">Revenu Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var city in Model.TopCities)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center gap-2">
                                            <div class="bg-light rounded-circle d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                                                <i class="bi bi-geo-alt text-primary"></i>
                                            </div>
                                            <span class="fw-semibold">@city.City</span>
                                        </div>
                                    </td>
                                    <td class="text-center">@city.OrderCount</td>
                                    <td class="text-end fw-bold text-success">@city.Revenue.ToString("N0") MAD</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5 text-muted small">Aucune donnée de vente par ville</div>
            }
        </div>
    </div>
    <div class="col-lg-6">
        <div class="card border-0 shadow-soft rounded-4 p-4 h-100 bg-dark text-white overflow-hidden position-relative">
            <div class="position-relative z-index-1">
                <h5 class="fw-bold mb-4">Performance Globale</h5>
                <div class="row g-4">
                    <div class="col-6">
                        <p class="text-light-50 small mb-1">Revenu Total</p>
                        <h2 class="fw-bold mb-0">@Model.TotalRevenue.ToString("N0") MAD</h2>
                    </div>
                    <div class="col-6">
                        <p class="text-light-50 small mb-1">Total Commandes</p>
                        <h2 class="fw-bold mb-0">@Model.TotalOrders</h2>
                    </div>
                    <div class="col-12">
                        <div class="mt-4">
                            <p class="text-light-50 small mb-2">Taux d'activité utilisateurs</p>
                            @{
                                var userActivityRate = Model.TotalUsers > 0 ? (int)((double)Model.TotalUsersActifs / Model.TotalUsers * 100) : 0;
                            }
                            <div class="d-flex align-items-center gap-3">
                                <div class="progress flex-grow-1 bg-white bg-opacity-20 rounded-pill" style="height: 10px;">
                                    <div class="progress-bar bg-terracotta" style="width: @userActivityRate%"></div>
                                </div>
                                <span class="fw-bold">@userActivityRate%</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Subtle Background Graphic - Fixed positioning and opacity -->
            <i class="bi bi-graph-up-arrow position-absolute" style="font-size: 160px; bottom: -40px; right: -30px; opacity: 0.04; color: white; transform: rotate(-5deg); pointer-events: none;"></i>
        </div>
    </div>
</div>

    <div class="col-lg-12">
        <div class="card border-0 shadow-soft rounded-4 p-4 h-100">
            <h5 class="fw-bold mb-4">Top Produits</h5>
            <div class="row g-4">
                @foreach (var produit in Model.TopProduits)
                {
                    <div class="col-md-6 col-lg-4 col-xl-3">
                        <div class="card border-0 shadow-sm rounded-3 h-100 hover-lift">
                            <div class="card-body p-3">
                                <div class="d-flex gap-3 align-items-start mb-3">
                                    @if (!string.IsNullOrEmpty(produit.ImageUrl))
                                    {
                                        <img src="@produit.ImageUrl" alt="@produit.NomProduit" class="rounded" style="width: 48px; height: 48px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="rounded bg-light d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                                            <i class="bi bi-image text-muted"></i>
                                        </div>
                                    }
                                    <div class="flex-grow-1">
                                        <h6 class="small fw-bold mb-1 text-truncate" title="@produit.NomProduit">@produit.NomProduit</h6>
                                        <p class="small text-muted mb-1">@produit.NomCooperative</p>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <small class="text-primary fw-semibold">@produit.Prix.ToString("N0") MAD</small>
                                            <small class="text-success">@produit.NombreVentes ventes</small>
                                        </div>
                                        @if (produit.MoyenneAvis.HasValue)
                                        {
                                            <div class="d-flex align-items-center gap-1 mt-1">
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    <i class="bi bi-star-fill small @(i <= produit.MoyenneAvis.Value ? "text-warning" : "text-muted")"></i>
                                                }
                                                <small class="text-muted ms-1">@produit.MoyenneAvis.Value.ToString("F1")</small>
                                            </div>
                                        }
                                    </div>
                                </div>
                                <div class="text-center">
                                    <small class="text-muted">Revenus générés: <strong class="text-success">@produit.RevenusGeneres.ToString("N0") MAD</strong></small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                @if (!Model.TopProduits.Any())
                {
                    <div class="col-12">
                        <div class="text-center py-5">
                            <i class="bi bi-graph-up text-muted h4 mb-2"></i>
                            <p class="small text-muted mb-0">Aucun produit vendu pour le moment</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- ADD: Chart.js + scripts to render charts -->
<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
<script>
    // Users doughnut: active vs inactive
    const usersActive = @Model.TotalUsersActifs;
    const usersInactive = @(Model.TotalUsers - Model.TotalUsersActifs);
    const usersCtx = document.getElementById('usersDoughnut');
    if (usersCtx) {
        new Chart(usersCtx, {
            type: 'doughnut',
            data: {
                labels: ['Actifs', 'Inactifs'],
                datasets: [{
                    data: [usersActive, Math.max(0, usersInactive)],
                    backgroundColor: ['#198754', '#dee2e6'],
                    borderWidth: 0
                }]
            },
            options: {
                plugins: {
                    legend: { position: 'bottom' }
                },
                cutout: '60%'
            }
        });
    }

    // Cooperatives doughnut: active vs inactive
    const coopsActive = @Model.TotalCooperativesActives;
    const coopsInactive = @(Model.TotalCooperatives - Model.TotalCooperativesActives);
    const coopsCtx = document.getElementById('coopsDoughnut');
    if (coopsCtx) {
        new Chart(coopsCtx, {
            type: 'doughnut',
            data: {
                labels: ['Actives', 'Inactives'],
                datasets: [{
                    data: [coopsActive, Math.max(0, coopsInactive)],
                    backgroundColor: ['#0d6efd', '#dee2e6'],
                    borderWidth: 0
                }]
            },
            options: {
                plugins: {
                    legend: { position: 'bottom' }
                },
                cutout: '60%'
            }
        });
    }

    // Stock doughnut: OK / Faible / Rupture
    const stockOk = @Model.ProduitsStockOk;        // CHANGED: use server-provided count
    const stockLow = @Model.ProduitsStockFaible;
    const stockOut = @Model.ProduitsRupture;
    const stockCtx = document.getElementById('stockDoughnut');
    if (stockCtx) {
        new Chart(stockCtx, {
            type: 'doughnut',
            data: {
                labels: ['Stock OK', 'Stock Faible', 'Rupture'],
                datasets: [{
                    data: [stockOk, stockLow, stockOut],
                    backgroundColor: ['#20c997', '#ffc107', '#dc3545'],
                    borderWidth: 0
                }]
            },
            options: {
                plugins: {
                    legend: { position: 'bottom' }
                },
                cutout: '60%'
            }
        });
    }

    // Prepare data for Monthly Revenue
    const monthlyData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(
        Model.MonthlyRevenue.Select(m => new {
            month = m.Month,
            revenue = m.Revenue
        })
    ));

    const revenueCtx = document.getElementById('monthlyRevenueChart');
    if (revenueCtx && Array.isArray(monthlyData) && monthlyData.length) {
        new Chart(revenueCtx, {
            type: 'line',
            data: {
                labels: monthlyData.map(m => m.month),
                datasets: [{
                    label: 'Revenus (MAD)',
                    data: monthlyData.map(m => m.revenue),
                    borderColor: '#D87A4F',
                    backgroundColor: 'rgba(216, 122, 79, 0.1)',
                    fill: true,
                    tension: 0.4,
                    pointRadius: 4,
                    pointBackgroundColor: '#D87A4F'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false }
                },
                scales: {
                    y: { beginAtZero: true, grid: { borderDash: [5, 5] } },
                    x: { grid: { display: false } }
                }
            }
        });
    }

    // Prepare data for Top Products (name + sales)
    const topProducts = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(
        Model.TopProduits.Select(p => new {
            name = p.NomProduit,
            sales = p.NombreVentes
        })
    ));
    const productsBarCtx = document.getElementById('topProductsSalesBar');
    if (productsBarCtx && Array.isArray(topProducts) && topProducts.length) {
        new Chart(productsBarCtx, {
            type: 'bar',
            data: {
                labels: topProducts.map(p => p.name),
                datasets: [{
                    label: 'Ventes',
                    data: topProducts.map(p => p.sales),
                    backgroundColor: '#0dcaf0',
                    borderRadius: 8,
                }]
            },
            options: {
                plugins: {
                    legend: { display: false }
                },
                scales: {
                    x: { ticks: { autoSkip: false, maxRotation: 45, minRotation: 0 } },
                    y: { beginAtZero: true, precision: 0 }
                }
            }
        });
    }
</script>



<style>
    .hover-lift {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .hover-lift:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
    }
</style>
