@model List<Projet__E_commerce.Models.ViewModels.AlertViewModel>

<header class="d-flex justify-content-between align-items-center mb-5 pb-4 border-bottom">
    <div>
        <h1 class="font-display fw-bold h3 mb-0">Alertes & Notifications</h1>
        <p class="text-muted mb-0">@Model.Count alerte(s) active(s)</p>
    </div>
</header>

@if (Model.Any())
{
    <div class="row g-4">
        @foreach (var alert in Model)
        {
            var alertClass = alert.Severity switch
            {
                "warning" => "alert-warning",
                "danger" => "alert-danger",
                "info" => "alert-info",
                _ => "alert-secondary"
            };

            var iconClass = alert.Type switch
            {
                "stock" => "bi-box-seam",
                "order" => "bi-cart",
                "user" => "bi-person",
                _ => "bi-info-circle"
            };

            <div class="col-md-6">
                <div class="alert @alertClass border-0 shadow-soft rounded-4 d-flex align-items-start gap-3" role="alert">
                    <div class="mt-1">
                        <i class="bi @iconClass h4 mb-0"></i>
                    </div>
                    <div class="flex-grow-1">
                        <h6 class="fw-bold mb-2">@alert.Title</h6>
                        <p class="mb-2">@alert.Message</p>
                        <small class="text-muted">
                            <i class="bi bi-clock"></i> @alert.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                        </small>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="card border-0 shadow-soft rounded-4 p-5">
        <div class="text-center">
            <i class="bi bi-check-circle text-success" style="font-size: 4rem;"></i>
            <h4 class="mt-3 text-success">Aucune alerte active</h4>
            <p class="text-muted">Tout fonctionne correctement !</p>
        </div>
    </div>
}

<div class="mt-5">
    <div class="card border-0 shadow-soft rounded-4 p-4">
        <h5 class="fw-bold mb-4">Types d'alertes surveillées</h5>
        <div class="row g-3">
            <div class="col-md-4">
                <div class="p-3 bg-light rounded-3">
                    <i class="bi bi-box-seam text-warning h3 mb-2"></i>
                    <h6 class="fw-bold">Stock faible</h6>
                    <p class="small text-muted mb-0">Produits sous le seuil d'alerte</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-3 bg-light rounded-3">
                    <i class="bi bi-cart text-info h3 mb-2"></i>
                    <h6 class="fw-bold">Commandes en attente</h6>
                    <p class="small text-muted mb-0">Commandes nécessitant une action</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-3 bg-light rounded-3">
                    <i class="bi bi-person text-danger h3 mb-2"></i>
                    <h6 class="fw-bold">Comptes inactifs</h6>
                    <p class="small text-muted mb-0">Utilisateurs à vérifier</p>
                </div>
            </div>
        </div>
    </div>
</div>
