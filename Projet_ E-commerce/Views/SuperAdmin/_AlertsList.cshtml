@model List<Projet__E_commerce.Models.ViewModels.OrderDetailsViewModel>

<header class="d-flex justify-content-between align-items-center mb-5 pb-4 border-bottom">
    <div>
        <h1 class="font-display fw-bold h3 mb-0">Appel Livraison et Commande</h1>
        <p class="text-muted mb-0">@Model.Count commande(s) en attente</p>
    </div>
    <div class="d-flex gap-2">
        <button class="btn btn-outline-primary" onclick="refreshOrders()">
            <i class="bi bi-arrow-clockwise"></i> Actualiser
        </button>
    </div>
</header>

@if (Model.Any())
{
    <div class="row g-4">
        @foreach (var order in Model)
        {
            <div class="col-lg-6">
                <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                    <div class="card-header bg-light d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1 fw-bold">Commande #<span class="text-primary">@order.IdCommande</span></h6>
                            <small class="text-muted">@order.DateCommande.ToString("dd/MM/yyyy HH:mm")</small>
                        </div>
                        <span class="badge @(order.Statut == "en_attente" ? "bg-warning" : order.Statut == "valide" ? "bg-success" : order.Statut == "annule" ? "bg-danger" : "bg-secondary") rounded-pill px-3 py-2">
                            @order.Statut
                        </span>
                    </div>
                    <div class="card-body p-4">
                        <!-- Client Info -->
                        <div class="mb-3">
                            <h6 class="fw-bold mb-2"><i class="bi bi-person text-primary me-2"></i>Client</h6>
                            <p class="mb-1 fw-semibold">@order.ClientNom @order.ClientPrenom</p>
                            <p class="small text-muted mb-0">@order.ClientEmail</p>
                            <p class="small text-muted mb-0">@order.ClientTelephone</p>
                        </div>

                        <!-- Delivery Address -->
                        @if (!string.IsNullOrEmpty(order.AdresseLivraison))
                        {
                            <div class="mb-3">
                                <h6 class="fw-bold mb-2"><i class="bi bi-geo-alt text-success me-2"></i>Adresse de livraison</h6>
                                <p class="small mb-0">@order.AdresseLivraison</p>
                                <p class="small mb-0">@order.VilleLivraison @order.CodePostalLivraison</p>
                            </div>
                        }

                        <!-- Order Items -->
                        <div class="mb-3">
                            <h6 class="fw-bold mb-2"><i class="bi bi-cart text-info me-2"></i>Articles commandés</h6>
                            <div class="table-responsive">
                                <table class="table table-sm mb-0">
                                    <thead>
                                        <tr>
                                            <th class="border-0 p-1">Produit</th>
                                            <th class="border-0 p-1 text-center">Qté</th>
                                            <th class="border-0 p-1 text-end">Prix</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in order.OrderItems)
                                        {
                                            <tr>
                                                <td class="border-0 p-1">
                                                    <div class="d-flex align-items-center gap-2">
                                                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                                                        {
                                                            <img src="@item.ImageUrl" alt="@item.NomProduit" class="rounded" style="width: 32px; height: 32px; object-fit: cover;">
                                                        }
                                                        <div>
                                                            <div class="fw-semibold small">@item.NomProduit</div>
                                                            <div class="text-muted small">@item.NomCooperative</div>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td class="border-0 p-1 text-center">@item.Quantite</td>
                                                <td class="border-0 p-1 text-end fw-semibold">@item.PrixUnitaire.ToString("N0") MAD</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <!-- Order Summary -->
                        <div class="border-top pt-3">
                            <div class="row">
                                <div class="col-6">
                                    <small class="text-muted">Sous-total</small>
                                    <div class="fw-bold">@order.SousTotal.ToString("N0") MAD</div>
                                </div>
                                <div class="col-6 text-end">
                                    <small class="text-muted">Frais de livraison</small>
                                    <div class="fw-bold">@order.FraisLivraison.ToString("N0") MAD</div>
                                </div>
                            </div>
                            <hr class="my-2">
                            <div class="d-flex justify-content-between align-items-center">
                                <strong>Total</strong>
                                <strong class="text-primary">@order.PrixTotal.ToString("N0") MAD</strong>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="card-footer bg-white border-top-0 p-3">
                        <div class="d-flex gap-2">
                            @if (order.Statut == "en_attente")
                            {
                                <button class="btn btn-success btn-sm flex-fill" onclick="validateOrder(@order.IdCommande)">
                                    <i class="bi bi-check-circle"></i> Valider
                                </button>
                                <button class="btn btn-danger btn-sm flex-fill" onclick="cancelOrder(@order.IdCommande)">
                                    <i class="bi bi-x-circle"></i> Annuler
                                </button>
                            }
                            <button class="btn btn-outline-primary btn-sm" onclick="viewOrderDetails(@order.IdCommande)">
                                <i class="bi bi-eye"></i> Détails
                            </button>
                            @if (order.Statut == "en_preparation")
                            {
                                <button class="btn btn-warning btn-sm" onclick="createDelivery(@order.IdCommande)">
                                    <i class="bi bi-truck"></i> Livraison
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="card border-0 shadow-soft rounded-4 p-5">
        <div class="text-center">
            <i class="bi bi-cart-check text-success" style="font-size: 4rem;"></i>
            <h4 class="mt-3 text-success">Aucune commande en attente</h4>
            <p class="text-muted">Toutes les commandes ont été traitées !</p>
        </div>
    </div>
}

<div class="mt-5">
    <div class="card border-0 shadow-soft rounded-4 p-4">
        <h5 class="fw-bold mb-4">Statuts des commandes</h5>
        <div class="row g-3">
            <div class="col-md-4">
                <div class="p-3 bg-warning bg-opacity-10 rounded-3 border border-warning">
                    <i class="bi bi-clock text-warning h3 mb-2"></i>
                    <h6 class="fw-bold text-warning">En attente</h6>
                    <p class="small text-muted mb-0">Commandes reçues en attente de validation</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-3 bg-success bg-opacity-10 rounded-3 border border-success">
                    <i class="bi bi-gear text-success h3 mb-2"></i>
                    <h6 class="fw-bold text-success">En préparation</h6>
                    <p class="small text-muted mb-0">Commandes confirmées et prêtes pour livraison</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-3 bg-danger bg-opacity-10 rounded-3 border border-danger">
                    <i class="bi bi-x-circle text-danger h3 mb-2"></i>
                    <h6 class="fw-bold text-danger">Annulées</h6>
                    <p class="small text-muted mb-0">Commandes refusées ou annulées</p>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function refreshOrders() {
        location.reload();
    }

    function validateOrder(orderId) {
        if (confirm('Êtes-vous sûr de vouloir valider cette commande ?')) {
            fetch('/SuperAdmin/ValidateOrder', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                },
                body: JSON.stringify({ orderId: orderId })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert('Erreur: ' + data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Une erreur est survenue lors de la validation de la commande.');
            });
        }
    }

    function cancelOrder(orderId) {
        if (confirm('Êtes-vous sûr de vouloir annuler cette commande ?')) {
            fetch('/SuperAdmin/CancelOrder', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                },
                body: JSON.stringify({ orderId: orderId })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert('Erreur: ' + data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Une erreur est survenue lors de l\'annulation de la commande.');
            });
        }
    }

    function viewOrderDetails(orderId) {
        window.location.href = `/SuperAdmin/OrderDetails/${orderId}`;
    }

    function createDelivery(orderId) {
        if (confirm('Êtes-vous sûr de vouloir créer une livraison pour cette commande ?')) {
            fetch('/SuperAdmin/CreateDelivery', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                },
                body: JSON.stringify({ orderId: orderId })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert('Erreur: ' + data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Une erreur est survenue lors de la création de la livraison.');
            });
        }
    }
</script>
