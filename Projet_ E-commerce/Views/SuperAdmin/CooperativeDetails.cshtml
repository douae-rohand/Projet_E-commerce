@model Projet__E_commerce.Models.ViewModels.CooperativeDetailsViewModel

@{
    Layout = null;
    ViewData["Title"] = $"{Model.NomCooperative} - DÃ©tails";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
</head>
<body class="bg-light">
    <div class="container-fluid p-4">
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <a href="@Url.Action("Cooperatives", "SuperAdmin")" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Retour
                </a>
            </div>
            <div class="text-end">
                <h6 class="fw-bold mb-0">@ViewBag.UserEmail</h6>
                <p class="small text-muted mb-0">Super Administrateur</p>
            </div>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- Cooperative Info Card -->
        <div class="card border-0 shadow-sm rounded-4 mb-4">
            <div class="card-body p-4">
                <div class="row">
                    <div class="col-md-2 text-center">
                        @if (!string.IsNullOrEmpty(Model.Logo))
                        {
                            <img src="@Model.Logo" alt="@Model.NomCooperative" class="rounded-3 img-fluid" style="max-width: 150px;">
                        }
                        else
                        {
                            <div class="rounded-3 bg-light d-flex align-items-center justify-content-center" style="width: 150px; height: 150px;">
                                <i class="bi bi-shop text-muted" style="font-size: 3rem;"></i>
                            </div>
                        }
                    </div>
                    <div class="col-md-10">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div>
                                <h2 class="fw-bold mb-2">@Model.NomCooperative</h2>
                                <p class="text-muted mb-2">
                                    <i class="bi bi-envelope"></i> @Model.Email
                                </p>
                                @if (!string.IsNullOrEmpty(Model.Telephone))
                                {
                                    <p class="text-muted mb-2">
                                        <i class="bi bi-telephone"></i> @Model.Telephone
                                    </p>
                                }
                                @if (!string.IsNullOrEmpty(Model.Ville))
                                {
                                    <p class="text-muted mb-2">
                                        <i class="bi bi-geo-alt"></i> @Model.Ville
                                    </p>
                                }
                            </div>
                            <div>
                                @if (Model.EstActif)
                                {
                                    <span class="badge bg-success fs-6"><i class="bi bi-check-circle"></i> Actif</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger fs-6"><i class="bi bi-x-circle"></i> Inactif</span>
                                }
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <div class="mb-3">
                                <h6 class="fw-bold">Description</h6>
                                <p class="text-muted">@Model.Description</p>
                            </div>
                        }

                        <div class="row g-3">
                            <div class="col-md-4">
                                <div class="p-3 bg-primary bg-opacity-10 rounded-3">
                                    <h6 class="text-primary mb-1">Produits</h6>
                                    <h3 class="fw-bold mb-0">@Model.TotalProduits</h3>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="p-3 bg-info bg-opacity-10 rounded-3">
                                    <h6 class="text-info mb-1">Commandes</h6>
                                    <h3 class="fw-bold mb-0">@Model.TotalCommandes</h3>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="p-3 bg-success bg-opacity-10 rounded-3">
                                    <h6 class="text-success mb-1">Revenus</h6>
                                    <h3 class="fw-bold mb-0">@Model.Revenue.ToString("N0") MAD</h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Products Section -->
        <div class="card border-0 shadow-sm rounded-4">
            <div class="card-header bg-white border-0 p-4">
                <h4 class="fw-bold mb-0">Produits (@Model.Produits.Count)</h4>
            </div>
            <div class="card-body p-4">
                @if (Model.Produits.Any())
                {
                    <div class="row g-4">
                        @foreach (var product in Model.Produits)
                        {
                            <div class="col-md-6 col-lg-4">
                                <div class="card h-100 border shadow-sm">
                                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                                    {
                                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.NomP" style="height: 200px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                            <i class="bi bi-image text-muted" style="font-size: 3rem;"></i>
                                        </div>
                                    }
                                    <div class="card-body">
                                        <h5 class="card-title fw-bold">@product.NomP</h5>
                                        <p class="text-muted small mb-2">
                                            <span class="badge bg-secondary">@product.Categorie</span>
                                        </p>
                                        @if (!string.IsNullOrEmpty(product.Description))
                                        {
                                            <p class="card-text small text-muted">@product.Description</p>
                                        }
                                        <div class="d-flex justify-content-between align-items-center mb-3">
                                            <h4 class="text-terracotta fw-bold mb-0">@product.Prix.ToString("N2") MAD</h4>
                                            <span class="badge @(product.Stock > 0 ? "bg-success" : "bg-danger")">
                                                Stock: @product.Stock
                                            </span>
                                        </div>

                                        @if (product.Avis.Any())
                                        {
                                            <div class="mb-3">
                                                <div class="d-flex align-items-center gap-2">
                                                    <div class="text-warning">
                                                        @for (int i = 1; i <= 5; i++)
                                                        {
                                                            if (i <= Math.Round(product.MoyenneAvis ?? 0))
                                                            {
                                                                <i class="bi bi-star-fill"></i>
                                                            }
                                                            else
                                                            {
                                                                <i class="bi bi-star"></i>
                                                            }
                                                        }
                                                    </div>
                                                    <span class="small text-muted">
                                                        @product.MoyenneAvis?.ToString("N1") (@product.NombreAvis avis)
                                                    </span>
                                                </div>
                                            </div>

                                            <button class="btn btn-sm btn-outline-primary w-100" type="button" data-bs-toggle="collapse" data-bs-target="#reviews-@product.IdP">
                                                <i class="bi bi-chat-left-text"></i> Voir les avis
                                            </button>

                                            <div class="collapse mt-3" id="reviews-@product.IdP">
                                                <div class="list-group">
                                                    @foreach (var avis in product.Avis.Take(5))
                                                    {
                                                        <div class="list-group-item">
                                                            <div class="d-flex justify-content-between align-items-start mb-2">
                                                                <h6 class="mb-0 fw-semibold">@avis.ClientPrenom @avis.ClientNom</h6>
                                                                <div class="text-warning small">
                                                                    @for (int i = 1; i <= 5; i++)
                                                                    {
                                                                        if (i <= avis.Note)
                                                                        {
                                                                            <i class="bi bi-star-fill"></i>
                                                                        }
                                                                        else
                                                                        {
                                                                            <i class="bi bi-star"></i>
                                                                        }
                                                                    }
                                                                </div>
                                                            </div>
                                                            @if (!string.IsNullOrEmpty(avis.Commentaire))
                                                            {
                                                                <p class="small mb-1">@avis.Commentaire</p>
                                                            }
                                                            <small class="text-muted">@avis.DateAvis.ToString("dd/MM/yyyy")</small>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        }
                                        else
                                        {
                                            <p class="small text-muted text-center">Aucun avis</p>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="bi bi-box text-muted" style="font-size: 4rem;"></i>
                        <h5 class="mt-3 text-muted">Aucun produit</h5>
                    </div>
                }
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
