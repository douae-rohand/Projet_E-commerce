@model Projet__E_commerce.Models.ViewModels.CooperativeDetailsViewModel

@{
    Layout = "~/Views/SuperAdmin/_SuperAdminLayout.cshtml";
    ViewData["Title"] = $"{Model.NomCooperative} - Détails";
    ViewBag.ActiveTab = "cooperatives";
}

<!-- Header -->
<div class="d-flex justify-content-between align-items-center mb-4 pb-4 border-bottom">
    <div>
        <h1 class="font-display fw-bold h3 mb-0">@Model.NomCooperative</h1>
        <p class="text-muted mb-0">Détails et performances de la coopérative</p>
    </div>
    <div>
        <a href="@Url.Action("Cooperatives", "SuperAdmin")" class="btn btn-outline-secondary rounded-3">
            <i class="bi bi-arrow-left"></i> Retour à la liste
        </a>
    </div>
</div>

<!-- Cooperative Info Card -->
<div class="card border-0 shadow-sm rounded-4 mb-4">
    <div class="card-body p-4">
        <div class="row align-items-center">
            <div class="col-md-auto text-center mb-3 mb-md-0">
                @if (!string.IsNullOrEmpty(Model.Logo))
                {
                    <img src="@Model.Logo" alt="@Model.NomCooperative" class="rounded-4 shadow-sm" style="width: 120px; height: 120px; object-fit: cover;">
                }
                else
                {
                    <div class="rounded-4 bg-light d-flex align-items-center justify-content-center mx-auto shadow-sm" style="width: 120px; height: 120px;">
                        <i class="bi bi-shop text-muted" style="font-size: 2.5rem;"></i>
                    </div>
                }
            </div>
            <div class="col-md">
                <div class="d-flex flex-wrap justify-content-between align-items-start gap-3 mb-3">
                    <div>
                        <h4 class="fw-bold mb-1">@Model.NomCooperative</h4>
                        <div class="d-flex flex-wrap gap-3 text-muted small">
                            <span><i class="bi bi-envelope me-1"></i> @Model.Email</span>
                            @if (!string.IsNullOrEmpty(Model.Telephone))
                            {
                                <span><i class="bi bi-telephone me-1"></i> @Model.Telephone</span>
                            }
                            @if (!string.IsNullOrEmpty(Model.Ville))
                            {
                                <span><i class="bi bi-geo-alt me-1"></i> @Model.Ville</span>
                            }
                        </div>
                    </div>
                    <div>
                        @if (Model.EstActif)
                        {
                            <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25 px-3 py-2 rounded-pill">
                                <i class="bi bi-check-circle-fill me-1"></i> Actif
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-danger bg-opacity-10 text-danger border border-danger border-opacity-25 px-3 py-2 rounded-pill">
                                <i class="bi bi-x-circle-fill me-1"></i> Inactif
                            </span>
                        }
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <p class="text-secondary small mb-3">@Model.Description</p>
                }

                <div class="row g-3">
                    <div class="col-6 col-md-4">
                        <div class="p-3 bg-light rounded-4 border border-white shadow-sm h-100">
                            <h6 class="text-muted small mb-1">Produits</h6>
                            <h4 class="fw-bold mb-0">@Model.TotalProduits</h4>
                        </div>
                    </div>
                    <div class="col-6 col-md-4">
                        <div class="p-3 bg-light rounded-4 border border-white shadow-sm h-100">
                            <h6 class="text-muted small mb-1">Commandes</h6>
                            <h4 class="fw-bold mb-0">@Model.TotalCommandes</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Products Section -->
<div class="card border-0 shadow-sm rounded-4 overflow-hidden">
    <div class="card-header bg-white border-0 p-4">
        <h5 class="fw-bold mb-0"><i class="bi bi-box-seam me-2"></i>Catalogue Produits (@Model.Produits.Count)</h5>
    </div>
    <div class="card-body p-4 bg-light bg-opacity-50">
        @if (Model.Produits.Any())
        {
            <div class="row g-4">
                @foreach (var product in Model.Produits)
                {
                    <div class="col-md-6 col-xl-4">
                        <div class="card h-100 border-0 shadow-sm rounded-4 hover-lift overflow-hidden">
                            <div class="position-relative">
                                @if (!string.IsNullOrEmpty(product.ImageUrl))
                                {
                                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.NomP" style="height: 180px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="bg-light d-flex align-items-center justify-content-center" style="height: 180px;">
                                        <i class="bi bi-image text-muted" style="font-size: 2.5rem;"></i>
                                    </div>
                                }
                                <div class="position-absolute top-0 end-0 p-2">
                                    <span class="badge @(product.Stock > 0 ? "bg-success" : "bg-danger") shadow-sm">
                                        Stock: @product.Stock
                                    </span>
                                </div>
                            </div>
                            <div class="card-body p-3">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h6 class="card-title fw-bold mb-0 text-truncate" style="max-width: 151px;">@product.NomP</h6>
                                    <span class="badge bg-secondary bg-opacity-10 text-secondary small">@product.Categorie</span>
                                </div>
                                <h5 class="text-terracotta fw-bold mb-3">@product.Prix.ToString("N2") <small style="font-size: 0.7em;">MAD</small></h5>
                                
                                @if (product.Avis.Any())
                                {
                                    <div class="d-flex align-items-center gap-2 mb-3">
                                        <div class="text-warning small">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                <i class="bi bi-star@(i <= Math.Round(product.MoyenneAvis ?? 0) ? "-fill" : "")"></i>
                                            }
                                        </div>
                                        <span class="text-muted extra-small">
                                            @product.MoyenneAvis?.ToString("N1") (@product.NombreAvis)
                                        </span>
                                    </div>
                                }

                                <button class="btn btn-sm btn-light w-100 rounded-3" type="button" data-bs-toggle="collapse" data-bs-target="#reviews-@product.IdP">
                                    <i class="bi bi-chat-left-text me-1"></i> @(product.Avis.Any() ? "Voir les avis" : "Aucun avis")
                                </button>

                                <div class="collapse mt-3" id="reviews-@product.IdP">
                                    <div class="list-group list-group-flush small">
                                        @foreach (var avis in product.Avis.Take(3))
                                        {
                                            <div class="list-group-item bg-transparent px-0 py-2">
                                                <div class="d-flex justify-content-between mb-1">
                                                    <span class="fw-semibold">@avis.ClientPrenom @avis.ClientNom</span>
                                                    <span class="text-warning extra-small">
                                                        @for (int i = 1; i <= 5; i++)
                                                        {
                                                            <i class="bi bi-star@(i <= avis.Note ? "-fill" : "")"></i>
                                                        }
                                                    </span>
                                                </div>
                                                <p class="mb-0 text-secondary" style="font-size: 0.85rem;">@avis.Commentaire</p>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-box-seam text-muted opacity-25" style="font-size: 4rem;"></i>
                <h5 class="mt-3 text-muted">La coopérative n'a pas encore ajouté de produits.</h5>
            </div>
        }
    </div>
</div>

<style>
    .extra-small { font-size: 0.75rem; }
    .hover-lift { transition: transform 0.2s; }
    .hover-lift:hover { transform: translateY(-5px); }
</style>

