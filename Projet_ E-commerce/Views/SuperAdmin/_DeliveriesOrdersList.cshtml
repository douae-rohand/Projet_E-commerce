@model List<Projet__E_commerce.Models.ViewModels.OrderDetailsViewModel>

<div class="mb-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark font-display mb-1">Appel Livraison et Commande</h2>
            <p class="text-secondary mb-0">Gestion et suivi des commandes et des livraisons</p>
        </div>
        <div>
            <button class="btn btn-outline-secondary rounded-pill px-4 text-uppercase small fw-bold">
                <i class="bi bi-download me-2"></i>Exporter
            </button>
        </div>
    </div>

    <!-- Stats Summary Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm rounded-4 h-100 p-3">
                <div class="d-flex align-items-center gap-3">
                    <div class="rounded-circle bg-primary bg-opacity-10 p-3 text-primary">
                        <i class="bi bi-cart-check h4 mb-0"></i>
                    </div>
                    <div>
                        <h6 class="text-secondary small text-uppercase mb-1">Total Commandes</h6>
                        <h4 class="fw-bold mb-0">@Model.Count</h4>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
             <div class="card border-0 shadow-sm rounded-4 h-100 p-3">
                <div class="d-flex align-items-center gap-3">
                    <div class="rounded-circle bg-warning bg-opacity-10 p-3 text-warning">
                        <i class="bi bi-truck h4 mb-0"></i>
                    </div>
                    <div>
                        <h6 class="text-secondary small text-uppercase mb-1">En Livraison</h6>
                        <h4 class="fw-bold mb-0">@Model.Count(m => m.DeliveryStatus == "en_cours" || m.DeliveryStatus == "en_preparation")</h4>
                    </div>
                </div>
            </div>
        </div>
         <div class="col-md-3">
             <div class="card border-0 shadow-sm rounded-4 h-100 p-3">
                <div class="d-flex align-items-center gap-3">
                    <div class="rounded-circle bg-success bg-opacity-10 p-3 text-success">
                        <i class="bi bi-check-circle h4 mb-0"></i>
                    </div>
                    <div>
                        <h6 class="text-secondary small text-uppercase mb-1">Livrées</h6>
                        <h4 class="fw-bold mb-0">@Model.Count(m => m.DeliveryStatus == "livre")</h4>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
             <div class="card border-0 shadow-sm rounded-4 h-100 p-3">
                <div class="d-flex align-items-center gap-3">
                    <div class="rounded-circle bg-danger bg-opacity-10 p-3 text-danger">
                        <i class="bi bi-x-circle h4 mb-0"></i>
                    </div>
                    <div>
                        <h6 class="text-secondary small text-uppercase mb-1">Annulées</h6>
                        <h4 class="fw-bold mb-0">@Model.Count(m => m.Statut == "annule")</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="border-0 py-3 ps-4 text-secondary small text-uppercase fw-bold">Commande</th>
                        <th class="border-0 py-3 text-secondary small text-uppercase fw-bold">Client</th>
                        <th class="border-0 py-3 text-secondary small text-uppercase fw-bold">Adresse</th>
                        <th class="border-0 py-3 text-secondary small text-uppercase fw-bold">Statut Commande</th>
                        <th class="border-0 py-3 text-secondary small text-uppercase fw-bold">Statut Livraison</th>
                        <th class="border-0 py-3 text-secondary small text-uppercase fw-bold">Total</th>
                        <th class="border-0 py-3 pe-4 text-end text-secondary small text-uppercase fw-bold">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <span class="fw-bold text-dark">#@item.IdCommande</span>
                                <div class="small text-secondary">@item.CreatedAt.ToString("dd/MM/yyyy")</div>
                            </td>
                            <td>
                                <div class="fw-medium text-dark">@item.ClientPrenom @item.ClientNom</div>
                                <div class="small text-secondary">@item.ClientEmail</div>
                            </td>
                             <td>
                                <div class="text-truncate" style="max-width: 200px;" title="@item.AdresseComplete">
                                    @item.VilleLivraison
                                </div>
                                <div class="small text-secondary">@item.DeliveryMode</div>
                            </td>
                            <td>
                                @{
                                    var orderBadgeClass = item.Statut switch {
                                        "valide" => "bg-success bg-opacity-10 text-success",
                                        "en_attente" => "bg-warning bg-opacity-10 text-warning",
                                        "annule" => "bg-danger bg-opacity-10 text-danger",
                                        _ => "bg-secondary bg-opacity-10 text-secondary"
                                    };
                                }
                                <span class="badge rounded-pill @orderBadgeClass px-3 py-2 fw-normal">
                                    @item.Statut
                                </span>
                            </td>
                             <td>
                                @if(item.HasDelivery) {
                                    var deliveryBadgeClass = item.DeliveryStatus switch {
                                        "livre" => "bg-success bg-opacity-10 text-success",
                                        "en_cours" => "bg-primary bg-opacity-10 text-primary",
                                        "en_preparation" => "bg-info bg-opacity-10 text-info",
                                        "non_livre" => "bg-danger bg-opacity-10 text-danger",
                                        _ => "bg-secondary bg-opacity-10 text-secondary"
                                    };
                                    <span class="badge rounded-pill @deliveryBadgeClass px-3 py-2 fw-normal">
                                        @(item.DeliveryStatus ?? "N/A")
                                    </span>
                                } else {
                                    <span class="text-secondary small footer-text">-</span>
                                }
                            </td>
                            <td class="fw-bold text-dark">@item.MontantTotal.ToString("N2") DH</td>
                            <td class="pe-4 text-end">
                                <button class="btn btn-sm btn-light rounded-circle" data-bs-toggle="tooltip" title="Voir détails">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
