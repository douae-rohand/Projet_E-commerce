@{
    Layout = null;
    ViewData["Title"] = "Connexion - SoukDigital";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
</head>
<body class="bg-white">
    <div class="container-fluid p-0">
        <div class="row g-0 min-vh-100">
            <!-- Left Side - Form -->
            <div class="col-lg-6 d-flex align-items-center justify-content-center p-4 p-md-5">
                <div class="w-100" style="max-width: 400px;">
                    <div class="text-center mb-5">
                        <a href="/" class="d-inline-block mb-4">
                            <div class="rounded-4 bg-primary text-white d-flex align-items-center justify-content-center mx-auto shadow-elevated" style="width: 56px; height: 56px;">
                                <span class="font-display h3 mb-0">S</span>
                            </div>
                        </a>
                        <h1 class="font-display fw-bold h2 mb-2">Bon retour !</h1>
                        <p class="text-muted">Connectez-vous à votre compte SoukDigital</p>
                    </div>

                    <form>
                        <div class="mb-4">
                            <label class="form-label small fw-bold text-uppercase">Email</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0 px-3"><i class="bi bi-envelope text-muted"></i></span>
                                <input type="email" class="form-control bg-light border-start-0 py-3" placeholder="votre@email.com" required>
                            </div>
                        </div>

                        <div class="mb-4">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <label class="form-label small fw-bold text-uppercase mb-0">Mot de passe</label>
                                <a href="#" class="small text-primary text-decoration-none">Oublié ?</a>
                            </div>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0 px-3"><i class="bi bi-lock text-muted"></i></span>
                                <input type="password" class="form-control bg-light border-start-0 py-3" placeholder="••••••••" required>
                                <button class="btn btn-light border" type="button"><i class="bi bi-eye"></i></button>
                            </div>
                        </div>

                        <div class="mb-4 form-check">
                            <input type="checkbox" class="form-check-input" id="remember">
                            <label class="form-check-label small text-muted" for="remember">Se souvenir de moi</label>
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg w-100 py-3 rounded-3 shadow-soft fw-bold mb-4">
                            Se connecter
                        </button>

                        <div class="position-relative mb-4">
                            <hr class="text-muted opacity-25">
                            <span class="position-absolute top-50 start-50 translate-middle bg-white px-3 small text-muted text-uppercase">Ou</span>
                        </div>

                        <div class="row g-2">
                            <div class="col-6">
                                <button class="btn btn-outline-dark w-100 py-2 d-flex align-items-center justify-content-center gap-2">
                                    <i class="bi bi-google"></i> Google
                                </button>
                            </div>
                            <div class="col-6">
                                <button class="btn btn-outline-dark w-100 py-2 d-flex align-items-center justify-content-center gap-2">
                                    <i class="bi bi-facebook"></i> Facebook
                                </button>
                            </div>
                        </div>
                    </form>

                    <p class="text-center mt-5 small text-muted">
                        Pas encore de compte ? <a href="/register" class="text-primary fw-bold text-decoration-none">S'inscrire</a>
                    </p>
                </div>
            </div>

            <!-- Right Side - Image -->
            <div class="col-lg-6 d-none d-lg-block position-relative overflow-hidden">
                <div class="position-absolute inset-0 bg-primary opacity-75" style="z-index: 1;"></div>
                <img src="https://images.unsplash.com/photo-1590736969955-71cc94901144?w=1200&h=1600&fit=crop" class="position-absolute h-100 w-100 object-fit-cover" alt="Artisanat" style="filter: contrast(110%) brightness(80%);">
                <div class="position-absolute d-flex flex-column align-items-center justify-content-center text-white text-center p-5 w-100 h-100" style="z-index: 2;">
                    <h2 class="font-display display-4 fw-bold mb-4">Bienvenue sur SoukDigital</h2>
                    <p class="lead opacity-75 max-w-md mx-auto">Découvrez l'artisanat marocain authentique et soutenez nos coopératives locales.</p>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
