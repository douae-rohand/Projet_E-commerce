    async function deleteAddress(idAdresse) {
        const formData = new FormData();
        formData.append('idAdresse', idAdresse);
        formData.append('__RequestVerificationToken', document.querySelector('input[name="__RequestVerificationToken"]').value);

        try {
            const response = await fetch('/Account/DeleteAddress', {
                method: 'POST',
                body: formData
            });
            
            const result = await response.json();
            if (result.success) {
                location.reload();
            } else {
                alert(result.message);
            }
        } catch (error) {
            alert('Une erreur est survenue lors de la suppression.');
        }
        return false;
    }

    // Orders Filter Function
    function filterOrders(status) {
        const orderItems = document.querySelectorAll('.order-item');
        const filterButtons = document.querySelectorAll('.order-status-nav .nav-link');
        const ordersContainer = document.getElementById('ordersContainer');
        const emptyState = document.getElementById('ordersEmptyState');
        
        // Update active button
        filterButtons.forEach(btn => {
            if (btn.getAttribute('data-status') === status) {
                btn.classList.add('active');
            } else {
                btn.classList.remove('active');
            }
        });
        
        // Filter orders
        let visibleCount = 0;
        orderItems.forEach(item => {
            const itemStatus = item.getAttribute('data-status');
            
            if (status === 'tous' || itemStatus === status) {
                item.classList.remove('d-none');
                item.style.display = 'flex';
                visibleCount++;
            } else {
                item.classList.add('d-none');
                item.style.display = 'none';
            }
        });
        
        // Show/hide empty state (only if emptyState element exists)
        if (emptyState && ordersContainer) {
            if (visibleCount === 0) {
                ordersContainer.classList.add('d-none');
                emptyState.classList.remove('d-none');
                
                // Update empty state message based on filter
                const statusMessages = {
                    'tous': 'Vous n\'avez aucune commande pour le moment.',
                    'en_preparation': 'Aucune commande en préparation.',
                    'en_livraison': 'Aucune commande en livraison.',
                    'livre': 'Aucune commande livrée.',
                    'annule': 'Aucune commande annulée.'
                };
                
                const emptyStateMessage = document.getElementById('emptyStateMessage');
                if (emptyStateMessage) {
                    emptyStateMessage.textContent = statusMessages[status] || 'Aucune commande trouvée.';
                }
            } else {
                ordersContainer.classList.remove('d-none');
                emptyState.classList.add('d-none');
            }
        }
        
        return false;
    }

    // Order Details Function
    async function loadOrderDetails(orderId) {
        const modal = new bootstrap.Modal(document.getElementById('orderDetailsModal'));
        const contentDiv = document.getElementById('orderDetailsContent');
        
        // Show loading state
        contentDiv.innerHTML = `
            <div class="text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Chargement...</span>
                </div>
            </div>
        `;
        
        modal.show();

        try {
            const response = await fetch(`/Account/OrderDetails/${orderId}`);
            if (response.ok) {
                const html = await response.text();
                contentDiv.innerHTML = html;
            } else {
                contentDiv.innerHTML = `
                    <div class="text-center py-4 text-danger">
                        <i class="bi bi-exclamation-circle h4 mb-2 d-block"></i>
                        <p class="mb-0">Impossible de charger les détails.</p>
                    </div>
                `;
            }
        } catch (error) {
            contentDiv.innerHTML = `
                <div class="text-center py-4 text-danger">
                    <i class="bi bi-exclamation-circle h4 mb-2 d-block"></i>
                    <p class="mb-0">Une erreur est survenue.</p>
                </div>
            `;
        }
    }


    // Rating System Logic
    const stars = document.querySelectorAll('.rating-stars i');
    const ratingInput = document.getElementById('ratingValue');

    stars.forEach(star => {
        star.addEventListener('mouseover', function() {
            const value = this.getAttribute('data-value');
            highlightStars(value);
        });

        star.addEventListener('mouseout', function() {
            const value = ratingInput.value || 0;
            highlightStars(value);
        });

        star.addEventListener('click', function() {
            const value = this.getAttribute('data-value');
            ratingInput.value = value;
            highlightStars(value);
        });
    });

    function highlightStars(value) {
        stars.forEach(star => {
            const starValue = star.getAttribute('data-value');
            if (starValue <= value) {
                star.classList.remove('bi-star');
                star.classList.add('bi-star-fill');
            } else {
                star.classList.remove('bi-star-fill');
                star.classList.add('bi-star');
            }
        });
    }

    function openRatingModal(productId, productName, productImage) {
        document.getElementById('ratingProductId').value = productId;
        document.getElementById('ratingProductName').textContent = productName;
        document.getElementById('ratingProductImage').src = productImage;
        
        // Reset form
        document.getElementById('ratingForm').reset();
        ratingInput.value = '';
        highlightStars(0);
        
        const modal = new bootstrap.Modal(document.getElementById('ratingModal'));
        modal.show();
    }

    async function submitReview(event) {
        event.preventDefault();
        
        if (!ratingInput.value) {
            alert('Veuillez sélectionner une note.');
            return false;
        }

        const formData = new FormData(event.target);

        try {
            const response = await fetch('/Account/SubmitReview', {
                method: 'POST',
                body: formData
            });

            const result = await response.json();
            
            if (result.success) {
                const modal = bootstrap.Modal.getInstance(document.getElementById('ratingModal'));
                modal.hide();
                alert(result.message); // Or use a nicer toast notification
            } else {
                alert(result.message);
            }
        } catch (error) {
            alert('Une erreur est survenue.');
        }
        
        return false;
    }
</script>
