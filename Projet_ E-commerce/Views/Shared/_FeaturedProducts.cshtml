<section class="py-5 bg-white">
    <div class="container">
        <!-- Header -->
        <div class="d-flex flex-column flex-md-row align-items-md-end justify-content-md-between gap-3 mb-5">
            <div>
                <span class="small fw-medium text-terracotta mb-2 d-block">Sélection du Terroir</span>
                <h2 class="display-5 font-display fw-bold mb-3">
                    Produits des Coopératives
                </h2>
                <p class="text-muted" style="max-width: 500px;">
                    Découvrez les meilleurs produits artisanaux, certifiés et traçables de nos coopératives partenaires
                </p>
            </div>
            <a asp-controller="Catalog" asp-action="Index" class="category-link-all">
                Voir tous les produits
                <i class="bi bi-arrow-right ms-2"></i>
            </a>
        </div>

        <!-- Products Grid -->
        <div class="row g-3 g-md-4">
            @{
                var products = new[]
                {
                    new { Id = 1, Name = "Huile d'Argan Bio - 100ml", Price = 180, OriginalPrice = 220, Image = "https://images.unsplash.com/photo-1608571423902-eed4a5ad8108?w=400&h=400&fit=crop", Rating = 4.9, Reviews = 234, Category = "Coopérative Tissaliwine", Cooperative = "Souss-Massa", IsBestSeller = true, IsNew = false },
                    new { Id = 2, Name = "Safran de Taliouine - 1g", Price = 85, OriginalPrice = 0, Image = "https://images.unsplash.com/photo-1615485290382-441e4d049cb5?w=400&h=400&fit=crop", Rating = 4.8, Reviews = 156, Category = "Coopérative Souktana", Cooperative = "Taliouine", IsBestSeller = false, IsNew = true },
                    new { Id = 3, Name = "Miel de Thym des Montagnes - 500g", Price = 240, OriginalPrice = 290, Image = "https://images.unsplash.com/photo-1587049352846-4a222e784d38?w=400&h=400&fit=crop", Rating = 4.7, Reviews = 89, Category = "Coopérative Annahal", Cooperative = "Moyen Atlas", IsBestSeller = false, IsNew = false },
                    new { Id = 4, Name = "Tapis Berbère Beni Ourain - 150x200", Price = 2800, OriginalPrice = 0, Image = "https://images.unsplash.com/photo-1600166898405-da9535204843?w=400&h=400&fit=crop", Rating = 4.9, Reviews = 67, Category = "Coopérative Azrou", Cooperative = "Moyen Atlas", IsBestSeller = true, IsNew = false },
                    new { Id = 5, Name = "Amlou aux Amandes - 250g", Price = 95, OriginalPrice = 0, Image = "https://images.unsplash.com/photo-1599599810769-bcde5a160d32?w=400&h=400&fit=crop", Rating = 4.8, Reviews = 178, Category = "Coopérative Targanine", Cooperative = "Essaouira", IsBestSeller = false, IsNew = true },
                    new { Id = 6, Name = "Eau de Rose de Kelaa M'Gouna - 200ml", Price = 65, OriginalPrice = 80, Image = "https://images.unsplash.com/photo-1518568403628-df55701ade9e?w=400&h=400&fit=crop", Rating = 4.6, Reviews = 124, Category = "Coopérative Roses du Dadès", Cooperative = "Kelaa M'Gouna", IsBestSeller = false, IsNew = false },
                    new { Id = 7, Name = "Huile de Figue de Barbarie - 30ml", Price = 320, OriginalPrice = 0, Image = "https://images.unsplash.com/photo-1617897903246-719242758050?w=400&h=400&fit=crop", Rating = 4.9, Reviews = 98, Category = "Coopérative Noor", Cooperative = "Guelmim", IsBestSeller = true, IsNew = false },
                    new { Id = 8, Name = "Dattes Medjool Premium - 1kg", Price = 150, OriginalPrice = 0, Image = "https://images.unsplash.com/photo-1590502593747-42a996133562?w=400&h=400&fit=crop", Rating = 4.7, Reviews = 203, Category = "Coopérative Oasis", Cooperative = "Errachidia", IsBestSeller = false, IsNew = false }
                };

                int index = 0;
            }

            @foreach (var product in products)
            {
                ViewData["Id"] = product.Id;
                ViewData["Name"] = product.Name;
                ViewData["Price"] = product.Price;
                ViewData["OriginalPrice"] = product.OriginalPrice;
                ViewData["Image"] = product.Image;
                ViewData["Rating"] = product.Rating;
                ViewData["Reviews"] = product.Reviews;
                ViewData["Category"] = product.Category;
                ViewData["Cooperative"] = product.Cooperative;
                ViewData["IsBestSeller"] = product.IsBestSeller;
                ViewData["IsNew"] = product.IsNew;
                
                <div class="col-6 col-md-4 col-lg-3 animate-fade-in-up" style="animation-delay: @(index * 0.05)s;">
                    <partial name="_ProductCard" />
                </div>
                index++;
            }
        </div>
    </div>
</section>
